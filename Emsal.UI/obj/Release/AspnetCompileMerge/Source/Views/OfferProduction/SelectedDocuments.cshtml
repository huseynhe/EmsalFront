@model Emsal.UI.Models.OfferProductionViewModel

@{ 
    Layout = "";
}

	<div class="col-md-12">
        <h4>Yüklənmiş sənədlər</h4>
		<div class="table-responsive">
			<table class="table table-bordered">
				<tr>
					<th>Sənədin adı</th>
					<th>Ölçüsü</th>
					<th>sil</th>
				</tr>
                @foreach (var item in Model.ProductionDocumentList)
                    {
				<tr>
					<td>@item.documentRealName</td>
					<td>@Math.Round(((decimal)((item.documentSize)/1024)/1024),2) mb
					</td>
					<td>
                        <div style="cursor:pointer;" class="glyphicon glyphicon-remove text-danger" onclick="deleteSelectedDocument(@item.Id)"></div>
					</td>
				</tr> 
                }
			</table>
		</div>
</div>

