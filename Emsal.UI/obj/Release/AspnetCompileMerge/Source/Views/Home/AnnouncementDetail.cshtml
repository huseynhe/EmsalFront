@model Emsal.UI.Models.ProductCatalogViewModel
    
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class='row single-product outer-bottom-sm '>
    <div class='col-md-12'>
        <div class="row  wow fadeInUp">
            <div class="col-xs-12 col-sm-5 col-md-4 gallery-holder">
                <div class="product-item-holder size-big single-product-gallery small-gallery">
                    <div id="owl-single-product">
                        <div class="single-product-gallery-item" id="slide1">
                            <a data-lightbox="image-1" data-title="" href="/Content/images/noimage.png">
                                <img class="img-responsive" alt="" src="/Content/images/blank.gif" data-echo="/Content/images/noimage.png" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class='col-sm-6 col-md-7 product-info-block'>
                <div class="product-info">
                    <h1 class="name">@Model.Announcement.product_name  - @Model.Announcement.quantity @Model.Announcement.quantity_type_Name</h1>
                    <div class="stock-container info-container m-t-10">
                        <div class="row">
                        </div>
                    </div>
                    <div class="description-container m-t-20">
                       Elan tarixi: @Model.Announcement.createdDate
                    </div>
                    <div class="price-container info-container m-t-20">
                        <div class="row">

                            <div class="col-sm-6">
                                <div class="price-box">
                                    <span class="price">@Model.Announcement.unit_price  ( @Model.Announcement.quantity_type_Name / man )</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
