@{
    ViewBag.Title = "Signout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="sign-in-page inner-bottom-sm">
    <div class="row">
        <div class="col-md-6 col-sm-6 sign-in col-md-offset-3">
            <div class="col-md-12">
                <h4 class="">Qeydiyyatdan keç</h4>
                <p class="">Göstərilən məlumatları daxil edərək təsdiqləyin</p>
            </div>
            <form role="form" class="register-form outer-top-xs">
                <div class="form-group col-md-6 ">
                    <label class="info-title">Ad <span>*</span></label>
                    <input type="text" placeholder="Ad" class="form-control unicase-form-control text-input">
                </div>
                <div class="form-group col-md-6 ">
                    <label class="info-title">Soyad<span>*</span></label>
                    <input type="text" placeholder="Soyad" class="form-control unicase-form-control text-input">
                </div>
                <div class="form-group col-md-6 ">
                    <label class="info-title">E-poçt<span>*</span></label>
                    <input type="text" placeholder="E-poçt" class="form-control unicase-form-control text-input">
                </div>
                <div class="form-group col-md-6 ">
                    <label class="info-title">Telefon<span>*</span></label>
                    <input type="text" placeholder="Telefon" class="form-control unicase-form-control text-input">
                </div>
                <div class="form-group col-md-6">
                    <label class="info-title">Ünvan</label>
                    <input type="text" placeholder="Ünvan" class="form-control unicase-form-control text-input">
                </div>
                <div class="form-group col-md-6">
                    <label class="info-title">Şifrə <span>*</span></label>
                    <input placeholder="Şifrə" type="password" class="form-control unicase-form-control text-input">
                </div>
                <div class="form-group col-md-12">
                    <button class="btn-upper btn btn-primary checkout-page-button" type="submit">TƏSDİQ ET</button>
                    <a class="forgot-password pull-right" href="#">İstifadəçi adını və ya şifrəni unutmusunuz?</a>
                </div>
            </form>
        </div>
    </div>
</div>
