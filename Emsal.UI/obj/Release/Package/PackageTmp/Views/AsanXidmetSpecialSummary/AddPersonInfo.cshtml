@model Emsal.UI.Models.User
@{
    Layout = "~/Views/Shared/_SignUpLayout.cshtml";
}

<div class="container col-md-6 col-md-offset-3" style="border-radius: 5px; margin-top: 30px; margin-bottom:30px; box-shadow:1px 1px 2px 3px #ddd">
    <br /><br /><br />

    <h2 style="text-align:center">Şəxsi Məlumatlar</h2>
    <br /><br /><br />
    @using (Html.BeginForm("AddPersonInfo", "AsanXidmetSpecialSummary", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(x => x.Email)
        @Html.HiddenFor(x => x.FutureUserRole)
        @Html.HiddenFor(x => x.MobilePhone)
        @Html.HiddenFor(x => x.mobilePhonePrefix)
        @Html.HiddenFor(x => x.WorkPhone)
        @Html.HiddenFor(x => x.workPhonePrefix)
        @Html.HiddenFor(x => x.UserName)
        @Html.HiddenFor(x => x.AddressId)
        @Html.HiddenFor(x => x.Password)
        @Html.HiddenFor(x => x.FullAddress)

            <div class="form-group" style="padding:5px">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", id = "name" })
            </div>
            <p class="text-danger" id="nameAlert"></p><br />
            <div class="form-group" style="padding:5px">
                @Html.LabelFor(x => x.Surname)
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", id = "surname" })
            </div>
            <p class="text-danger" id="surnameAlert"></p><br />

            <div class="form-group" style="padding:5px">
                @Html.LabelFor(x => x.FatherName)
                @Html.TextBoxFor(x => x.FatherName, new { @class = "form-control", id = "fathername" })
            </div>
            <p class="text-danger" id="fatherNameAlert"></p><br />

            <div class="form-group" style="padding:5px">
                <label>Doğum Tarixi</label>
                <input name="Birthday" type="text" class="form-control datepicker" />
            </div>
            <p class="text-danger" id="dateAlert"></p><br />

            <div class="form-group" style="padding:5px; display:none;">
                @Html.LabelFor(x => x.Pin)
                @Html.TextBoxFor(x => x.Pin, new { @class = "form-control", id = "pin" })
            </div>
            <p class="text-danger" id="pinAlert"></p><br />

            <div class="form-group" style="padding:5px">
                <label>Cinsi</label>
                <select class="form-control" id="Gender" name="Gender">
                    <option>Cinsi Seçin</option>
                    <option>Kişi</option>
                    <option>Qadın</option>
                </select>
            </div>
            <p class="text-danger" id="genderAlert"></p><br />

            <div class="form-group" style="padding:5px">
                <label>Təhsil</label>
                <select class="form-control" id="education" name="Education">
                    <option>Təhsil Seçin</option>
                    @{
                        if (Model != null)
                        {
                            foreach (var item in Model.EducationList)
                            {
                                <option>@item.name</option>
                            }
                        }

                    }
                </select>
            </div>
            <p class="text-danger" id="educationAlert"></p><br />

            <div class="form-group" style="padding:5px">
                <label>İş</label>
                <select class="form-control" id="Job" name="Job">
                    <option>İş seçin</option>
                    @{
                        if (Model != null)
                        {
                            foreach (var item in Model.JobList)
                            {
                                <option>@item.name</option>
                            }
                        }

                    }
                </select>
            </div>
            <p class="text-danger" id="jobAlert"></p><br />

            <div class="col-md-6 col-md-offset-4" style="margin-bottom:20px; padding:5px">
                <input type="submit" class="btn btn-success" value="Qeydiyyatdan Keç" id="sendInfo" />
            </div>
                        }
    <div class="clearfix" style="height: 20px;"></div>
</div>

