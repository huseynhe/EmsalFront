@model Emsal.UI.Models.User
@{
    Layout = "~/Views/Shared/_SignUpLayout.cshtml";
}

<div class="container col-md-6 col-md-offset-3" style="border-radius: 5px; margin-top: 30px; margin-bottom:30px; box-shadow:1px 1px 2px 3px #ddd">
    <br /><br /><br />

    <h2 style="text-align:center">Şəxsi Məlumatlar</h2>
    <br /><br /><br />
    @using (Html.BeginForm("AddPersonInfo", "SignUp", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group" style="display:none">
            @Html.LabelFor(x => x.UserName)
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", id = "username" })
        </div>

        <div class="form-group" style="display:none">
            @Html.LabelFor(x => x.AddressId)
            @Html.TextBoxFor(x => x.AddressId, new { @class = "form-control", id = "addressId" })
        </div>

        <div class="form-group" style="display:none">
            @Html.LabelFor(x => x.Password)
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", id = "password", autocomplete = "off" })
        </div>
            <div class="form-group" style="display:none">
                @Html.LabelFor(x => x.Email)
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", id = "email", autocomplete = "off" })
            </div>
            <div class="form-group" style="display:none">
                @Html.LabelFor(x => x.FutureUserRole)
                @Html.TextBoxFor(x => x.FutureUserRole, new { @class = "form-control", id = "futureUserRole", autocomplete = "off" })
            </div>
            <div class="form-group" style="padding:5px; display:none">
                <input type="text" name="Country" value="@Model.Country" />
            </div>

            <div class="form-group" style="padding:5px; display:none">
                <input type="text" name="CityId" value="@Model.CityId" />
            </div>

            <div class="form-group" style="padding:5px; display:none">
                <input type="text" name="VillageId" value="@Model.VillageId" />
            </div>

            <div class="form-group" style="padding:5px; display:none">
                <input type="text" name="Village" value="@Model.ThroughfareId" />
            </div>

            <div class="form-group" style="padding:5px; display:none">
                @Html.LabelFor(x => x.FullAddress)
                <input type="text" name="FullAddress" id="fullAddress" value="@Model.FullAddress" class="form-control" />
            </div>
            <div class="form-group" style="padding:5px">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", id = "name" })
            </div>
            <p class="text-danger" id="nameAlert"></p><br />
            <div class="form-group" style="padding:5px">
                @Html.LabelFor(x => x.Surname)
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", id = "surname" })
            </div>
            <p class="text-danger" id="surnameAlert"></p><br />

            <div class="form-group" style="padding:5px">
                @Html.LabelFor(x => x.FatherName)
                @Html.TextBoxFor(x => x.FatherName, new { @class = "form-control", id = "fathername" })
            </div>
            <p class="text-danger" id="fatherNameAlert"></p><br />

            <div class="form-group" style="padding:5px">
                <label>Doğum Tarixi</label>
                <input name="Birthday" type="text" class="form-control" id="datepicker" />
            </div>
            <p class="text-danger" id="dateAlert"></p><br />

            <div class="form-group" style="padding:5px; display:none;">
                @Html.LabelFor(x => x.Pin)
                @Html.TextBoxFor(x => x.Pin, new { @class = "form-control", id = "pin" })
            </div>
            <p class="text-danger" id="pinAlert"></p><br />

            <div class="form-group" style="padding:5px">
                <label>Cinsiyet</label>
                <select class="form-control" id="Gender" name="Gender">
                    <option>Cinsiyyet Seçin</option>
                    <option>Kişi</option>
                    <option>Qadın</option>
                </select>
            </div>
            <p class="text-danger" id="genderAlert"></p><br />

            <div class="form-group" style="padding:5px">
                <label>Tehsil</label>
                <select class="form-control" id="education" name="Education">
                    <option>Tehsil Seçin</option>
                    @{
                        if (Model != null)
                        {
                            foreach (var item in Model.EducationList)
                            {
                                <option>@item.name</option>
                            }
                        }

                    }
                </select>
            </div>
            <p class="text-danger" id="educationAlert"></p><br />

            <div class="form-group" style="padding:5px">
                <label>İş</label>
                <select class="form-control" id="Job" name="Job">
                    <option>İş seçin</option>
                    @{
                        if (Model != null)
                        {
                            foreach (var item in Model.JobList)
                            {
                                <option>@item.name</option>
                            }
                        }

                    }
                </select>
            </div>
            <p class="text-danger" id="jobAlert"></p><br />

            <div class="col-md-6 col-md-offset-4" style="margin-bottom:20px; padding:5px">
                <input type="submit" class="btn btn-success" value="Qeydiyyatdan Keç" id="sendInfo" />
            </div>
                        }
    <div class="clearfix" style="height: 20px;"></div>
</div>

