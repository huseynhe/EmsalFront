@model Emsal.UI.Models.SpecialSummaryViewModel

@{
    ViewBag.Title = "Offer";
    Layout = null;
}

@if (Model.PRMAdminUnitArrayPa != null)
{

    for (var i = 0; i < Model.PRMAdminUnitArrayPa.Count(); i++)
    {
        if (Model.PRMAdminUnitArrayPa[i].Count() > 0)
        {
            <div class="form-group col-md-6">
                <select required name="adId[@{ @Model.arrNum }]" onchange="GetAdminUnit(this)" class="form-control unicase-form-control select select2">
                    @if (Model.arrNum > 0)
                        {
                        <option value=""> Seçim edin</option>
                    }
                    @foreach (var itm in Model.PRMAdminUnitArrayPa[i])
                    {
                        if (itm.Id == Model.GivenAdminUnitIds[i + 1])
                        {
                            <option selected value="@itm.Id">@itm.Name</option>
                        }
                        else
                        {
                            <option value="@itm.Id">@itm.Name</option>
                        }
                    }
                </select>
                <span data-valmsg-replace="true" data-valmsg-for="adId[@{ @Model.arrNum }]" class="field-validation-valid text-danger"></span>
            </div>
            Model.arrNum = Model.arrNum + 1;
        }
    }

    <div class="clearfix"></div>

    @*<div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.descAddress, htmlAttributes: new { @class = "control-label" })
            <input type="text" name="descAddress" id="descAddress" placeholder="məs: Azadlıq prospekti 22, mənzil 33" class="form-control">
        </div>
    </div>*@
    }


    else {
        if (Model.PRMAdminUnitList.Count > 0)
        {
            <div class="form-group col-md-6">

                <select required name="adId[@{ @Model.arrNum }]" onchange="GetAdminUnit(this)" class="form-control unicase-form-control select select2">

                        <option value="" selected> Seçim edin</option>

                    @foreach (var item in Model.PRMAdminUnitList)
                    {
                        if (item.Name == "Azərbaycan Respublikası")
                        {
                            <option  value="@item.Id"> @item.Name </option>
                        }
                        else
                        {
                            <option value="@item.Id"> @item.Name </option>
                        }
                    }
                </select>

                <span data-valmsg-replace="true" data-valmsg-for="adId[@{ @Model.arrNum }]" class="field-validation-valid text-danger"></span>
            </div>
    }
    else
    {
        <div class="clearfix"></div>

        @*<div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.descAddress, htmlAttributes: new { @class = "control-label" })
                <input type="text" name="descAddress" id="descAddress" placeholder="məs: Azadlıq prospekti 22, mənzil 33" class="form-control">
            </div>
        </div>*@
        }
    }



<script>
    function GetAdminUnit(elem) {
        pId = $(elem).val();
        $(elem).parent().nextAll().remove();

        $('#lastAdminUnitId').val(pId);
        if (pId > 0) {
            $.ajax({
                url: '/GovernmentOrganisationSpecialSummary/AdminUnit?pId=' + pId,
                type: 'GET',
                //data: { "pId": appId},
                success: function (result) {
                    $('#addressId').val(pId);
                    $(elem).parent().parent().append(result);

                    $('.select2').select2();

                    //$("select[name='adId[0]']").change();
                },
                error: function () {

                }
            });
        }
    }
</script>