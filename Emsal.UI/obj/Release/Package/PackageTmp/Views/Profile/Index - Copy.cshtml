    function GetProductCatalog(elem)
    {
        var pId = $(elem).val();
        $(elem).parent().nextAll().remove();

        $.ajax({
            url: '/Profile/ProductCatalog?pId=' + pId,
            type: 'GET',
            //data: { "pId": appId},
            success: function (result) {
                $(elem).parent().parent().append(result);
            },
            error: function () {

            }
        });

    }
