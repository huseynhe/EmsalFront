@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row inner-bottom-sm">
    <div class="contact-page">
        <div class="col-md-12 contact-map outer-bottom-vs">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3886.0080692193424!2d80.29172299999996!3d13.098675000000002!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3a526f446a1c3187%3A0x298011b0b0d14d47!2sTransvelo!5e0!3m2!1sen!2sin!4v1412844527190" width="600" height="450" style="border:0"></iframe>
        </div>
        <div class="col-md-9 contact-form">
            <div class="col-md-12 contact-title">
                <h4>Müraciət göndər</h4>
            </div>
            <div class="col-md-4 ">
                <form class="register-form" role="form">
                    <div class="form-group">
                        <label class="info-title" for="exampleInputName">Ad, soyad, ata adı <span>*</span></label>
                        <input type="email" class="form-control unicase-form-control text-input" id="exampleInputName" placeholder="Ad, soyad, ata adı">
                    </div>
                </form>
            </div>
            <div class="col-md-4">
                <form class="register-form" role="form">
                    <div class="form-group">
                        <label class="info-title" for="exampleInputEmail1">E-poçt <span>*</span></label>
                        <input type="email" class="form-control unicase-form-control text-input" id="exampleInputEmail1" placeholder="info@emsal.az">
                    </div>
                </form>
            </div>
            <div class="col-md-4">
                <form class="register-form" role="form">
                    <div class="form-group">
                        <label class="info-title" for="exampleInputTitle">Telefon <span>*</span></label>
                        <input type="email" class="form-control unicase-form-control text-input" id="exampleInputTitle" placeholder="Telefon">
                    </div>
                </form>
            </div>
            <div class="col-md-12">
                <form class="register-form" role="form">
                    <div class="form-group">
                        <label class="info-title" for="exampleInputComments">Müraciətin məzmunu <span>*</span></label>
                        <textarea class="form-control unicase-form-control" id="exampleInputComments"></textarea>
                    </div>
                </form>
            </div>
            <div class="col-md-12 outer-bottom-small m-t-20">
                <button type="submit" class="btn-upper btn btn-primary checkout-page-button">Təsdiq et</button>
            </div>
        </div>
        <div class="col-md-3 contact-info">
            <div class="contact-title">
                <h4>&nbsp;</h4>
            </div>
            <div class="clearfix address">
                <span class="contact-i"><i class="fa fa-map-marker"></i></span>
                <span class="contact-span">Bakı şəhəri, Azadlıq prospekri 1.</span>
            </div>
            <div class="clearfix phone-no">
                <span class="contact-i"><i class="fa fa-mobile"></i></span>
                <span class="contact-span">
                    (012) 444 4444<br>
                    (012) 555 5555
                </span>
            </div>
            <div class="clearfix email">
                <span class="contact-i"><i class="fa fa-envelope"></i></span>
                <span class="contact-span">info@emsal.az</span>
            </div>
        </div>
    </div><!-- /.contact-page -->
</div><!-- /.row -->
