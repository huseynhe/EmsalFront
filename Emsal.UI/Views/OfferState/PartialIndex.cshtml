@model Emsal.UI.Models.OfferStateViewModel
@using PagedList.Mvc;
@using Emsal.Utility.CustomObjects;

@{
    ViewBag.Title = "Index";
    Layout = "";
    decimal tquantity = 0;
    string color = "#000;";
}
@using (Html.BeginForm("Approv", "OfferState", FormMethod.Post))
{

                    <!-- /.box-header -->
    <div class="box-body no-padding">
        @if (Model.isMain == 0)
        {
            <div class="checkbox btn-group">
                <label style="margin-left: 10px;">
                    <input id="allCheck" onclick="chcheckList(this)" type="checkbox"> Hamısını seç
                </label>
            </div>
            <div class="btn-group" id="chall">
                <button type="submit" class="btn btn-primary btn-sm">
                    <span class="glyphicon glyphicon-check"></span>&nbsp;Təsdiqləyin
                </button>
            </div>

        }
        <input hidden id="checkedList" />
        <div class="table-responsive">
            <div class="col-sm-1 col-sm-offset-11" style="position: absolute;">
                <span class="badge bg-danger pull-right badgemargin">@Model.itemCount</span>
            </div>
            <table class="table table-hover table-striped table-bordered">
                <tbody>
                    @foreach (var item in Model.ProductionDetailList)
                    {
                        <tr>
                            @if (Model.isMain == 0)
                            {
                                <td class="col-md-1" style="width:30px;">
                                    <input onchange="getCheckedList()" name="ids" value="@item.productionID" class="ch" type="checkbox">
                                </td>
                            }
                            <td class="col-md-2">
                                @item.productParentName (@item.productName)
                            </td>
                            <td class="col-md-1">
                                @Custom.ConverPriceToStringDelZero((decimal)item.quantity) @item.enumValueName
                            </td>
                            <td class="col-md-1">
                                @if (item.quantity != item.potentialProductQuantity)
                                {
                                    color = "#c9302c";
                                }
                                else
                                {
                                    color = "#000";
                                }
                                <span style="color:@color;">@Custom.ConverPriceToStringDelZero((decimal)item.potentialProductQuantity) @item.enumValueName</span>
                            </td>
                            <td class="col-md-1">
                                @Custom.ConverPriceToStringDelZero((decimal)item.unitPrice) AZN
                            </td>
                            <td class="col-md-1">
                                @item.description
                            </td>
                            <td class="col-md-2">
                                @if (item.personInformation != null)
                                {
                                    <span>
                                        @item.personInformation.Name @item.personInformation.Surname @item.personInformation.FatherName (@item.personInformation.gender)<br />
                                        @if (!string.IsNullOrEmpty(item.personInformation.PinNumber))
                                        {
                                            <b>fin: </b>@item.personInformation.PinNumber




                                        }
                                    </span>
                                    <div class="clearfix"></div>
                                    @item.organizationName
                                }
                            </td>
                            <td class="col-md-1">
                                @item.personInformation.roleDescription
                            </td>
                            <td class="col-md-2">
                                <table>
                                    @foreach (var itm in item.productionDocumentList)
                                    {
                                        <tr>
                                            <td>
                                                @itm.documentRealName&nbsp;

                                                (@Math.Round(((decimal)itm.documentSize / 1024) / 1024, 2)  mb)&nbsp;&nbsp;

                                                <div class="btn btn-primary btn-xs" onclick="getAttachmentFile(@itm.Id)">
                                                    <i class="fa fa-eye"></i>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </td>
                            @if (Model.isMain == 0)
                            {
                                <td class="col-md-1 shsingle text-center">
                                    <a href="/OfferState/Edit/@item.productionID" class="btn btn-danger btn-xs">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                </td>
                            }
                        </tr>

                        if (item.productionCalendarList.Count() > 0)
                        {
                            <tr>
                                <td colspan="10" style="padding:0;">
                                    <table class="table" style="margin:0;">
                                        <tr>
                                            <th>dövrülük</th>
                                            <th>il</th>
                                            <th>rüb</th>
                                            <th>ay</th>
                                            <th>gün</th>
                                            <th>miqdar</th>
                                            <th>miqdar (cəmi)</th>
                                        </tr>
                                        @foreach (var itemc in item.productionCalendarList)
                                        {
                                            tquantity = (itemc.quantity * itemc.transportation_eV_Id);
                                            <tr>
                                                <td>
                                                    @if (itemc.TypeDescription != null)
                                                    {
                                                        <span>@itemc.TypeDescription</span>
                                                    }
                                                </td>
                                                <td> @itemc.year</td>
                                                <td> @itemc.partOfyear</td>
                                                <td> @itemc.MonthDescription</td>
                                                <td> @itemc.day</td>
                                                <td> @Custom.ConverPriceToStringDelZero((decimal)itemc.quantity)</td>
                                                <td> @Custom.ConverPriceToStringDelZero((decimal)tquantity)</td>
                                            </tr>
                                        }
                                    </table>
                                </td>
                            </tr>
                        }
                        if (item != Model.ProductionDetailList.LastOrDefault())
                        {
                            <tr>
                                <td colspan="10" style="padding:0;background:#f2f2f2;">
                                    &nbsp;
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="box-footer clearfix">
        Səhifə @(Model.PagingT.PageCount < Model.PagingT.PageNumber ? 0 : Model.PagingT.PageNumber) (cəmi @Model.PagingT.PageCount)
        @Html.PagedListPager(Model.PagingT, page => Url.Action("Index", new { page, stateStatusEV = Model.stateStatusEV, productId = Model.productId, rId = Model.roleId, userInfo = Model.userInfo }))
    </div>


}


<script>
    $(document).ready(function () {
        $('#chall').hide();
    });
</script>
