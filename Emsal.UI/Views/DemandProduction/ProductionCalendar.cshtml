
@model Emsal.UI.Models.DemandProductionViewModel

@{
    ViewBag.Title = "ProductionCalendar";
    Layout = "";
    decimal tquantity = 0;
}

@if (Model.LProductionCalendarDetailList.Count() > 0)
{

        <table class="table" style="margin:0;">
            <tbody>
            <tr>
                <th>tipi</th>
                <th>il</th>
                <th>rüb</th>
                <th>ay</th>
                <th>gün</th>
                <th>saat</th>
                <th>miqdar</th>
                <th>miqdar (cəmi)</th>
@if (Model.isPDF == false)
{
                <th class="text-center">sil</th>
}
            </tr>
            @{
                foreach (var item in Model.LProductionCalendarDetailList)
                {
                    tquantity = ((decimal)item.quantity * (decimal)item.transportation_eV_Id);
                    <tr>
                        <td>
                            @if (item.TypeDescription != null)
                                {
                                    <span>@item.TypeDescription</span>
                                }
                        </td>
                        <td> @item.year </td>
                        <td> @item.partOfyear</td>
                        <td> @item.MonthDescription</td>
                        <td> @item.day</td>
                        <td> @item.oclock:00</td>
                        <td> 
                            @if ((int)Math.Round(item.quantity, 0) > (int)item.quantity)
                            {
                                @item.quantity
                            }
                            else
                            {
                                long qi = (int)Math.Round(item.quantity, 0);
                                <span>@qi</span>
                            }

                         </td>
                        <td> 
                            @if ((int)Math.Round(tquantity, 0) > (int)tquantity)
                            {
                                @tquantity
                            }
                            else
                            {
                                long qi = (int)Math.Round(tquantity, 0);
                                <span>@qi</span>
                            }
                        
                        </td>
@if (Model.isPDF == false)
{
                        <td class="text-center">
                            <div style="cursor:pointer;" class="glyphicon glyphicon-remove text-danger" onclick="deleteProductionCalendar(@item.ID, @item.demand_Id)"></div>
                        </td>
}
                    </tr>
                }
            }
                </tbody>
        </table>

                }