@model Emsal.UI.Models.DemandProductionViewModel
    
@{
    ViewBag.Title = "ProductionCalendar";
    Layout = "";
}

@if (Model.LProductionCalendarList.Count()>0)
{

    <div class="col-md-12">
        <table class="table table-bordered">
            <tr>
                <th>Gün</th>
                <th>Saat</th>
                <th>Ölçü</th>
                <th>Sil</th>
            </tr>
            @{
                foreach (var item in Model.LProductionCalendarList)
                {

                    <tr>
                        <td>@item.day</td>
                        <td>@item.oclock</td>
                        <td>@item.quantity</td>
                        <td class="text-center">
                            <div style="cursor:pointer;" class="glyphicon glyphicon-remove text-danger" onclick="deleteProductionCalendar(@item.Id, @item.demand_Id)"></div>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

                }