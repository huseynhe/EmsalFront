@model Emsal.UI.Models.DemandProductionViewModel
@{
    ViewBag.Title = "Demand";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";


    var fs = Model.fileSize;
    var ufs = Model.totalSize;
    var cfs = fs - ufs;

    int fi = 0;
    if (Model.fullAddressId != "")
    {
        Model.fullAddressId = "0," + Model.fullAddressId;
        fi = Model.fullAddressId.Split(',').Select(long.Parse).ToArray().Count() - 2;
    }
}

<script src="~/ContentProfile/js/DemandProduction.js"></script>


@using (Html.BeginForm("Index", "DemandProduction", FormMethod.Post,
                                         new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <a href="#" class="add-classified-help">Qaydalar</a>
    <div class="clear-both"></div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="potensial_client">
        <div id="mainf">

            <h4>Məhsulun çatdırılacağı ünvan</h4>
            <div class="row">

                <input style="opacity:0;position:absolute;" required name="addressId" id="addressId" />

                <div class="sign-in-page inner-bottom-sm" id="demandProductionAdminUnit">
                    <script>
                        $(document).ready(function () {
                            $.ajax({
                                url: '/DemandProduction/ForeignOrganization?pId=0',
                                type: 'GET',
                                success: function (result) {
                                    $('#demandProductionAdminUnit').html(result);

                                    $("select[name='adId[@fi]']").change();
                                },
                                error: function () {

                                }
                            });
                        });
                    </script>
                    @*@Html.Action("AdminUnit", "DemandProduction", new { pId = 0 })*@
                </div>
            </div>

            <h4>Məhsulu seçin</h4>
            <input hidden name="productId" id="productId" />

            <div class="row">

                <div class="sign-in-page inner-bottom-sm" id="productCatalogForSale">
    
                    </div>
                <div class="clearfix"></div>
                
                                <div class="sign-in-page inner-bottom-sm" id="productCatalogDemandProduction">
                        <script>
                        $(document).ready(function () {
                            $.ajax({
                                url: '/DemandProduction/ProductCatalog?pId=0',
                                type: 'GET',
                                success: function (result) {
                                    $('#productCatalogDemandProduction').html(result);
                                },
                                error: function () {

                                }
                            });
                        });
                        </script>
                        @*@Html.Action("ProductCatalog", "DemandProduction", new { pId = 0 })*@
                    </div>
                    <div class="clearfix"></div>
                </div>
            <h4>Təchizatın təqvim planı</h4>
                <div class="row">
                    <div class="col-md-3" hidden>
                        <div class="form-group">
                            @Html.LabelFor(model => model.endDate, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.endDate, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(model => model.endDate, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="col-md-2">
                        @Html.LabelFor(model => model.startDateYear, htmlAttributes: new { @class = "control-label" })
                        <select onchange="Getotherdate(this,'y','d')" required name="startDateYear" id="startDateYear" class="form-control select2">
                            <option value="">Seçim edin</option>
                            @for (var i = 0; i <= 1; i++)
                        {
                                <option value="@(DateTime.Now.Year+i)">@(DateTime.Now.Year + i)</option>
                        }
                        </select>
                        <span data-valmsg-replace="true" data-valmsg-for="startDateYear" class="field-validation-valid text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label for="startDate" class="control-label">&nbsp;</label>
                        <select required name="startDateMonth" onchange="Getotherdate(this, 'm', 'd')" id="startDateMonth" class="form-control select2">
                            <option value="">Seçim edin</option>
                            @foreach (var item in Model.EnumValueMonthList)
                        {
                                <option value="@item.Id">@item.description</option>
                        }
                        </select>
                        <span data-valmsg-replace="true" data-valmsg-for="startDateMonth" class="field-validation-valid text-danger"></span>
                    </div>


                    <div class="col-md-2">
                        @Html.LabelFor(model => model.endDateYear, htmlAttributes: new { @class = "control-label" })
                        <select required name="endDateYear" id="endDateYear" onchange="Getotherdate(this, '', 'd')" class="form-control select2">
                            <option value="">Seçim edin</option>
                        </select>
                        <span data-valmsg-replace="true" data-valmsg-for="endDateYear" class="field-validation-valid text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label for="endDate" class="control-label">&nbsp;</label>
                        <select required name="endDateMonth" id="endDateMonth" onchange="Getotherdate(this, '', 'd')" class="form-control select2">
                            <option value="">Seçim edin</option>
                            @foreach (var item in Model.EnumValueMonthList)
                        {
                                <option value="@item.Id">@item.description</option>
                        }
                        </select>
                        <span data-valmsg-replace="true" data-valmsg-for="endDateMonth" class="field-validation-valid text-danger"></span>
                    </div>
                </div>
            <div class="clear-both"></div>
            <div>
                <div class="row">
                    <div class="col-md-7" id="calendarMainDiv">
                        <div class="form-group">
                            @Html.LabelFor(model => model.shippingSchedule, htmlAttributes: new { @class = "control-label" })
                            <div class="clearfix"></div>
                            <div class="btn-group" data-toggle="buttons" id="">
                                @foreach (var item in Model.EnumValueShippingScheduleList)
                                {
                                    <label class="btn btn-primary shippingSchedule">
                                        <input type="text" class="hinp" hidden value="@item.name" />
                                        <input required type="radio" name="shippingSchedule" value="@item.Id" autocomplete="off">
                                        @item.description
                                    </label>
                                }
                            </div>
                            <div class="clearfix"></div>
                            <span data-valmsg-replace="true" data-valmsg-for="shippingSchedule" class="field-validation-valid text-danger"></span>
                        </div>
                        <div class="clearfix"></div>
                        <br />
                        <hr />
                        <br />
                        @*<h5>Seçilmiş aylar</h5>*@
                        <div class="form-group chMonthName">
                        </div>



                    </div>
                    <div id="getmonthresult"></div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group">
                @Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.description, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
            <div class="clearfix"></div>
        </div>

        <div id="selectedProducts">
            <script>
                        $(document).ready(function () {
                            getSelectedProducts();
                        });
            </script>
            @*@Html.Action("SelectedProducts", "DemandProduction")*@
        </div>  

        <div class="row">
            <div class="col-md-12" style="padding-left: 30px;">
                <div class="checkbox">
                    @Html.EditorFor(model => model.confirmList)
                </div>
                @Html.LabelFor(model => model.confirmList, htmlAttributes: new { @class = "control-label " })
            </div>

            <div class="clearfix"></div>

            <div class="signpdf">
                <div class="col-md-10">
                    <div id="filefieldtemplate">

                        <input type="file" required="required" accept=".pdf" name="attachfiles" onchange="chosefiles(this)" id="fup" class="attach-input false">

                        <span class="glyphicon glyphicon-paperclip attach-span"></span>
                        <div style="float: left; margin-top: 10px;">
                            <div style="padding: 10px; font-size: 14px; float: left" class="sel">fayl seçilməyib</div>
                        </div>
                        <div class="clearfix"></div>
                        <span data-valmsg-replace="true" data-valmsg-for="attachfiles" class="field-validation-valid text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>
        <button class="btn btn-primary btn-lg pull-right btnsubmit" type="submit">
            <i class="glyphicon glyphicon-ok"></i>&nbsp;Tələbinizi Kənd Təsərrüfatı Nazirliyinə göndərin
        </button>
        <br />
        <br />
    </div>

}





