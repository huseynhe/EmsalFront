@model Emsal.UI.Models.ProductCatalogViewModel

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="center">
    <div class="container">
        <div class="row single-product outer-bottom-sm">
            <div class="thumbnail col-md-12" style="padding: 20px;">
                <div class="row  wow fadeInUp">
                    <div class="col-xs-12 col-sm-5 col-md-4 gallery-holder text-center">
                      <img src="~/Content/img/noimage.png" />
                    </div>
                    <div class="col-sm-6 col-md-7 product-info-block">
                        <div class="product-info">
                            <h1 class="name">@Model.ProductionDetail.productName  - @Model.ProductionDetail.quantity @Model.ProductionDetail.enumValueName</h1>
                            <div class="stock-container info-container m-t-10">
                                <div class="row">
                                </div>
                            </div>
                            <div class="price-container info-container m-t-20">
                                <div class="row">

                                    <div class="col-sm-6">
                                        <div class="price-box">
                                            <h4>@Model.ProductionDetail.unitPrice  AZN</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</section>