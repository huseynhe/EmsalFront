<body>


    <header>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-2 text-center">
                    <a href="/">
                        <img class="logo" src="/Content/UI/img/logo.png">
                        <h5 class="text-white">Satınalan təşkilatların ərzaq məhsullarına tələbatı portalı</h5>
                    </a>
                </div>
                <div class="col-sm-12 col-md-10">
                    <div class="row"><br />
                        <h4 hidden class="text-white text-bold text-center" style="padding-bottom:20px;">Dövlət müəssisə və təşkilatları (idarələri) tərəfindən ərzaq məhsullarının mərkəzləşdirilmiş qaydada dövlət büdcəsinin vəsaitləri hesabına satın alınması Portalı</h4>
                        <div class="col-sm-12 col-md-9">

                            <div class="row">
                                <div class="col-sm-12 col-md-9">
                                    <form class="form-inline">
                                        <div class="form-group col-md-12">
                                            <input autocomplete="off" onkeyup="searchAnnouncement(this)" style="width:100%;" type="text" class="form-control" id="formGroupInputLarge" placeholder="Elanlar üzrə axtarış ...">
                                            <div style="position: absolute; width: calc(100% - 30px); float: left; z-index: 1000;" id="searchAnnouncementResult"></div>
                                        </div>
                                        @*<button type="button" class="btn bg_colorG text-white text-bold col-md-4">AXTAR</button>*@
                                    </form>
                                </div>
                                <div class="col-sm-12 col-md-3">
                                    <img class="chagri" src="/Content/UI/img/cagri.png">
                                </div>

                            </div>


                        </div>

                        <div class="col-sm-12 col-md-3">
                            <div class="reg">
                                @if (Session["musername"] == null)
                                {
                                    <a href="/Login" type="button" class="btn enter text-white text-bold bg_colorG box-shadow">GİRİŞ</a>
                                        <a href="/SignUp" type="button" class="btn text-white text-bold bg_colorG box-shadow">QEYDİYYAT</a>
                                }
                                else
                                {
                                    <div class="btn text-white text-bold bg_colorG box-shadow">@Session["musername"]</div>
                                    <a href="/Login/Logout" type="button" class="btn text-white text-bold bg_colorG box-shadow"><span class="glyphicon glyphicon-log-out"></span><span>&nbsp;ÇIXIŞ</span> </a>
                                }
                            </div>
                            <div class="clear-both"></div>
                        </div>
                    </div>

                    <div class="row" style="margin-top:20px;">

                        <div class="col-sm-12 col-md-8">
                            <nav class="navbar navbar-default">
                                <div class="container">
                                    <!-- Brand and toggle get grouped for better mobile display -->
                                    <div class="navbar-header">
                                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                            <span class="sr-only">Toggle navigation</span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                        </button>

                                    </div>

                                    <!-- Collect the nav links, forms, and other content for toggling -->
                                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                        <ul class="nav navbar-nav">
                                            <li class="dropdown">
                                                <a href="/" id="menu">ELANLAR</a>
                                            </li>
                                            <li class="dropdown">
                                                <a href="/Home/PotentialUser" id="menu">POTENSİAL İSTEHSALÇILAR</a>
                                            </li>
                                            <li class="dropdown">
                                                <a href="/OfferHome" id="menu">TƏKLİFLƏR</a>
                                            </li>
                                            <li class="dropdown">
                                                <a href="/" id="menu">QANUNVERİCİLİK</a>
                                            </li>
                                            <li class="dropdown">
                                                <a href="/" id="menu">HAQQIMIZDA</a>
                                            </li>
                                            <li class="dropdown">
                                                <a href="/Home/Contact" id="menu">ƏLAQƏ</a>
                                            </li>
                                        </ul>
                                    </div><!-- /.navbar-collapse -->
                                </div><!-- /.container-fluid -->
                            </nav>
                        </div>

                        <div class="col-sm-12 col-md-4">
                            <div class="insert_elan box-shadow">
                                <a href="/OfferProduction">
                                    <img src="/Content/UI/img/insert_elan.png">
                                    <h3>Təklif yerləşdirmək</h3>
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </header>


        <div>
            @RenderBody()
        </div>

    <footer>
        <div class="container">
