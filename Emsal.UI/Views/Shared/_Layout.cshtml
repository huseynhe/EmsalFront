    <script type="text/javascript">
        $('.select2').select2();
    </script>


    <script>
        $(document).ready(function () {
            $("#puserBut").click(function () {
                $("#puserMenu").animate({
                    height: 'toggle'
                });
            });
        });
    </script> 


    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
        $("#userType").on("change", function () {
            if ($("#userType").val() == "legalPerson") {
                $("#voenDiv").css("display", "block");
                $("#pinDiv").css("display", "none");
            }
            else {
                $("#voenDiv").css("display", "none");
                $("#pinDiv").css("display", "block");
            }
        })
    </script>
