@model Emsal.UI.Models.OfferMonitoringViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}
<h2>&nbsp;</h2>

<div class="row">
         <div class="col-md-6 col-md-offset-3">
<div class="box box-primary">
<div class="box-header with-border">
@*<h3 class="box-title">----</h3>*@
</div>

@using (Html.BeginForm("Edit", "OfferMonitoring", FormMethod.Post,
                                         new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="clear-both"></div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)


    <div class="box-body">

        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.monitoringStatusEVId, htmlAttributes: new { @class = "control-label" })
            <select name="monitoringStatusEVId" required class="form-control unicase-form-control select">
                <option selected value="">Seçim edin</option>
                @foreach (var item in Model.EnumValueList)
                {
                    if (item.Id == 41 || item.Id == 10117) { 
                    <option value="@item.Id">@item.description</option>
                }
                }
            </select>
            <span data-valmsg-replace="true" data-valmsg-for="monitoringStatusEVId" class="field-validation-valid text-danger"></span>
        </div>

             <div class="col-md-12">
                    <div class="form-group">
                @Html.LabelFor(model => model.message, htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.message, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.message, "", new { @class = "text-danger" })
            </div>
                  </div>


        <div class="col-md-12">
            <div id="filefieldtemplate">
                <input type="file" multiple accept="@Model.fileAcceptTypes" name="attachfiles" onchange="chosefiles(this)" id="fup" class="attach-input false">

                <span class="glyphicon glyphicon-paperclip attach-span"></span>
                <div style="float: left; margin-top: 10px;">
                    <div style="padding: 10px; font-size: 14px; float: left" class="sel">fayl seçilməyib</div>
                </div>
                <div class="clearfix"></div>
                <span data-valmsg-replace="true" data-valmsg-for="attachfiles" class="field-validation-valid text-danger"></span>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

   <div class="box-footer">
                <input type="submit" value="Təsdiqlə" class="btn btn-primary active" style="float:right;" />
            </div>

            }
            </div>
        </div>
    </div>
<br />



