@model Emsal.UI.Models.OfferMonitoringViewModel
@*@using PagedList.Mvc;*@


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}
<script src="~/ContentProfile/js/Monitoring.js"></script>


<br />

<div class="bs-callout bs-callout-info" style="float: left;">
    <h4>
        <i class="glyphicon glyphicon-info-sign"></i> Təkliflərin Monitorinqi
    </h4>
</div>

<div class="btn-group pull-right">
    <a class="btn btn-primary" href="/OfferMonitoring?monitoringStatusEV=new">Yeni daxil olmuş</a>
    <a class="btn btn-primary" href="/OfferMonitoring?monitoringStatusEV=Tesdiqlenen">Təsdiqləmək</a>
    <a class="btn btn-primary" href="/OfferMonitoring?monitoringStatusEV=reedited">Yenidən düzəliş</a>
    <a class="btn btn-primary" href="/OfferMonitoring?monitoringStatusEV=reject">İmtina etmək</a>
</div>

<div class="btn-group pull-right">
    <a class="btn btn-warning" href="/OfferMonitoring?monitoringStatusEV=Tesdiqlenen&isPa=true">Müvəqqəti müqavilələr</a>
</div>

<div class="clearfix"></div>
<br />
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    @*<h3 class="box-title">Müraciətlər</h3>*@
                    <!-- /.box-tools -->
                </div>
                <table class="table table-hover table-striped table-bordered" style="margin-bottom: 0;">
                    <tbody>
                        <tr>
                            @if (Model.isMain == 0)
                            {
                                <th class="col-md-1">#</th>
                            }
                            <th class="col-md-2">
                                Məhsulun adı<br />
                                @Html.Action("ProductCatalogForSale", "OfferMonitoring", new { actionName = "Index" })
                                @*<input onkeyup="OfferMonitoringSearch(this, 'productName')" class="form-control" placeholder="axtar" />*@
                            </th>
                            <th class="col-md-1">
                                Miqdarı (vahidi)
                            </th>
                            <th class="col-md-1">
                                @Html.DisplayNameFor(model => model.price)
                            </th>
                            <th class="col-md-2">
                                Qeyd
                            </th>
                            <th class="col-md-2">
                                İnfo<br />
                                <input onkeyup="OfferMonitoringSearch(this, 'userInfo')" class="form-control" placeholder="axtar" />
                            </th>
                            <th class="col-md-2">
                                İstifadəçinin növü<br />
                                <select onchange="StatisticsSearch(this, 'OfferMonitoring', 'Index', 'userType')" class="form-control select2" style="width:auto !important;">
                                    <option value="0">Seçim edin</option>

                                    <option value="15">Potensial istehsalçı</option>
                                    <option value="11">Satıcı (İdxalçı)</option>

                                </select>
                            </th>
                            <th class="col-md-2">
                                Sənədlər
                            </th>
                            @if (Model.isMain == 0)
                            {
                                <th class="col-md-1 shsingle text-center">imtina</th>
                            }
                        </tr>
                    </tbody>
                </table>
                <div id="AjaxPaginationList">
                    @Html.Partial("PartialIndex")
                </div>

            </div>
        </div>
    </div>
</div>

<script src="~/ContentProfile/js/pagedList.js"></script>



