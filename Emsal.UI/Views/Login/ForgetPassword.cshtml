@model Emsal.UI.Models.User
     
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ForgetPassword</h2>

<div class="clearfix" style="height:200px"></div>

@using (Html.BeginForm("ForgetPassword", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h3 style="text-align:center">Elektron poçt mobil və ya iş nömrənizi daxil edin </h3><br />
    <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
            @Html.LabelFor(x => x.UserName, htmlAttributes: new { @class = "control-label required" })
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Email, htmlAttributes: new { @class = "control-label required" })
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", required = "required", type ="email" })
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.MobilePhone, new { @class = "control-label" })
            <div class="row">
                <div class="col-md-4">
                    <select class="form-control" name="mobilePhonePrefix">
                        <option value="">Seçim edin</option>
                        @foreach (var item in Model.MobilePhonePrefixList)
                        {
                            <option value="@item.name">@item.description</option>
                        }
                    </select>
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.MobilePhone, new { @class = "form-control numbersOnly" })
                    @Html.ValidationMessageFor(x => x.MobilePhone, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="col-md-6 col-md-offset-4">
            <input type="submit" value="Göndər" class="btn btn-success" />

        </div>
    </div>
}
<div class="clearfix" style="height:300px"></div>
