@model Emsal.UI.Models.User

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="menu-container">
    <div class="content homepage" id="menu-1">
        <div class="container">
            <div class="right_below" id="center" style="padding-top:0px;">
                <div class="elanlar">
                    <div class="clearfix" style="height:200px"></div>

                    @using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(model => model.UserName)

                        
                        <div class="col-md-6 col-md-offset-3">
                            <div class="form-group">
                                <input type="text" name="Password" id="Password" placeholder="Yeni şifrənizi daxil edin" class="form-control">
                                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 col-md-offset-4">
                                <input type="submit" value="Göndər" class="btn btn-success" />
                            </div>
                        </div>
                    }
                    <div class="clearfix" style="height:300px"></div>

                </div>
            </div>
        </div>
    </div>
</div>
