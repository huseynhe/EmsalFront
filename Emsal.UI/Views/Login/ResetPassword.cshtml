@model Emsal.UI.Models.User

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="clearfix" style="height:200px"></div>

@using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.UserName)

    <h3 style="text-align:center">Yeni şifrənizi daxil edin </h3><br />
    <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
            @Html.LabelFor(x => x.Password, htmlAttributes: new { @class = "control-label required" })
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6 col-md-offset-4">
            <input type="submit" value="Göndər" class="btn btn-success" />
        </div>
    </div>
}
<div class="clearfix" style="height:300px"></div>

