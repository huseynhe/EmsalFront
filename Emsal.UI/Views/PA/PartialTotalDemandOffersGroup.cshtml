@model Emsal.UI.Models.OfferMonitoringViewModel
@using PagedList.Mvc;
@using Emsal.Utility.CustomObjects;

@{
    ViewBag.Title = "Index";
    Layout = "";
    string oppname = "";
    string ppname = "";
    int i = 0;
}


<div class="clearfix"></div><br />

<h4 class="text-danger text-center">
    <a href="/PA/TotalDemandOffersGroup?productId=@Model.productId&userTypeId=@Model.userTypeId&monthEVId=@Model.monthEVId&fin=@Model.fin&voen=@Model.voen&excell=true" class="btn btn-warning btn-sm btn-icon pull-right" style="margin-top: -5px;margin-right:5px;">
        <i class="fa fa-file-excel-o" aria-hidden="true"></i>Yüklə
    </a>
</h4>
<div class="clearfix"></div>
<br />

<span class="badge bg-danger pull-right badgemargin">@Model.itemCount</span>
<div class="clearfix"></div>

<div class="box-body no-padding">
    <div class="table-responsive">

        <ul class="thumbnails list-unstyled list-inline">
            @foreach (var item in Model.DemanProductionGroupList)
            {
                    if (oppname != item.productParentName)
                    {
                        i = 0;
                        <li class="col-md-12">
                            <h3 class="alert alert-info text-center">
                                @item.productParentName
                            </h3>
                        </li>

                }
                i = i + 1;
                    <li class="col-md-2">
                        <div class="thumbnail text-center" style="width:100%;height:340px;">
                            @if (!string.IsNullOrEmpty(item.documentUrl))
                            {
                                <img style="width:100%;height:170px;" class="img-responsive" src="@item.documentUrl@item.documentName" />
                            }
                            else
                            {
                                <img class="img-responsive" style="width:auto;height:170px;" src="~/Content/UI/images/noimage.png" />
                            }
                            <div class="caption">
                                <h4 class="text-bold">@item.productName</h4>
                                <h4 class="text-bold text-red">
                                    @Custom.ConverPriceToStringDelZero((decimal)item.totalQuantity) @item.enumValueName
                                    <span class="clearfix"></span>
                                    @Custom.ConverPriceToStringDelZero((decimal)item.totalOfferQuantity)
                                </h4>
                                <div style="position: absolute; bottom: 30px; float: left; width: calc(100% - 30px);">
                                    <a href="/PA/TotalDemandOffersGroupDetail?productId=@item.productId&userTypeId=@Model.userTypeId&fin=@Model.fin&voen=@Model.voen&monthEVId=@Model.monthEVId" class="btn btn-default text-bold f-left">Ətraflı</a>
                                    <button type="button" class="btn btn-primary text-white text-bold f-right">@Custom.ConverPriceToStringDelZero((decimal)item.unitPrice) AZN</button>
                                </div>
                            </div>
                        </div>
                    </li>
                    if (i == 6)
                    {
                        <div class="clearfix"></div>
                        i = 0;
                    }

                    oppname = item.productParentName;
            }
        </ul>

    </div>
</div>
<div class="box-footer clearfix">
    Səhifə @(Model.PagingT.PageCount < Model.PagingT.PageNumber ? 0 : Model.PagingT.PageNumber) (cəmi @Model.PagingT.PageCount)
    @Html.PagedListPager(Model.PagingT, page => Url.Action("TotalDemandOffersGroup", new { page, productId = Model.productId, userTypeId = Model.userTypeId, fin = Model.fin, voen = Model.voen, monthEVId = Model.monthEVId }))
</div>

