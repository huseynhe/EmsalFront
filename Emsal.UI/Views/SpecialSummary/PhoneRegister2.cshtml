    @Html.Partial("~/Views/Home/Footer.cshtml")
    <script>
        $("#checkMessage").on("click", function () {
            $.ajax({
                url: "/SpecialSummary/CheckConfirmationMessage/",
                type: "GET",
                data: { message: document.getElementById("confirmationMessage").value },
                success: function (item) {
                    if (item === "True") {
                        window.location.href = "/SpecialSummary/PhoneRegisterLast/";
                    }
                    else {
                        $("#confirmationErrorMessage").html("<h3 style = 'color:red'>Təsdiq kodunuz düzgün deyil</h3>")
                    }
                },
                error: function () {

                }
            })
        })
    </script>
