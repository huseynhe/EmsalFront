@model Emsal.UI.Models.ProductCatalogViewModel

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="center">
    <div class="container">
        <div class='row single-product outer-bottom-sm '>
            <div class='thumbnail col-md-12' style="padding: 20px;">
                <div class="row  wow fadeInUp">
                    <div class="col-xs-12 col-sm-5 col-md-4 gallery-holder text-center">
                        @if (Model.AnnouncementDetail.productCatalogDocumentList.Count()>0)
                        {
                            <img class="img-responsive" src="@Model.AnnouncementDetail.productCatalogDocumentList.FirstOrDefault().documentUrl@Model.AnnouncementDetail.productCatalogDocumentList.FirstOrDefault().documentName" />
                        }
                        else
                        {
                            <img src="~/Content/img/noimage.png" />
                        }
                    </div>
                    <div class='col-sm-6 col-md-7 product-info-block'>
                        <div class="product-info">
                            <h1 class="name">@Model.AnnouncementDetail.announcement.product_name  - @Model.AnnouncementDetail.announcement.quantity @Model.AnnouncementDetail.announcement.quantity_type_Name</h1>
                            <div class="stock-container info-container m-t-10">
                                <div class="row">
                                </div>
                            </div>
                            <h4>
                            @if (Model.startDate.ToShortDateString() != "01.01.0001" && Model.endDate.ToShortDateString() != "01.01.0001")
                            {
                                <span>Elan tarixi: @Model.startDate.ToShortDateString() - @Model.endDate.ToShortDateString()</span>
                            }
                            </h4><br />
                            <div class="price-container info-container m-t-20">
                                <div class="row">

                                    <div class="col-sm-6">
                                        <div class="price-box">
                                            <h4>@Model.AnnouncementDetail.announcement.unit_price  ( @Model.AnnouncementDetail.announcement.quantity_type_Name / man )</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</section>