@model Emsal.UI.Models.ProductCatalogViewModel

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="center">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-4 left_above">
                <div class="categoria_left_header">
                    <h3 class="text-bold">KATEQORİYALAR</h3>
                </div>
                <div class="panel-group">
                    <div class="panel panel-default">
                        @foreach (var item in Model.ProductCatalogList)
                        {
                            <div>
                                <div class="panel-heading">
                                    <h4 style="cursor:pointer;" onclick="GetProductCatalog(this, @item.Id,1)" class="panel-title">
                                        <span style="float:left" class="glyphicon glyphicon-menu-right"></span>&nbsp;<span data-toggle="collapse" data-original-title="" title="">@item.ProductName <span class="text-red"></span></span>
                                    </h4>
                                </div>
                                <div class="resp" style="margin-left:10px;"></div>
                            </div>

                        }

                    </div>
                </div>

@Html.Action("LastAnnouncement", "Home", new { pId = 0 })

                <div class="sorgu_block">
                    <div class="sorgu">
                        <div class="sorgu_header">
                            <h3>SORĞU</h3>
                        </div>

                        <h4 class="text-center"><b>Saytımızın faliyyətini bəyənirsinizmi?</b></h4>
                        <form role="form">
                            <div class="radio">
                                <label><input type="radio" name="optradio">Bəyənirəm</label>
                            </div>
                            <div class="radio">
                                <label><input type="radio" name="optradio">Bəyənmirəm</label>
                            </div>
                            <div class="radio">
                                <label><input type="radio" name="optradio">Qismən bəyənirəm</label>
                            </div>

                            <div class="sorgu_button">
                                <button type="button" class="btn btn-success">Səs ver</button>
                            </div>

                        </form>
                        <p class="text-center">Səsvermə resursun təkmilləşdirilməsi məqsədilə aparılır</p>
                    </div>
                </div>

            </div>
            <div class="col-xs-12 col-md-8 right_below">
                <div class="elanlar">
                    <h2 class="text-bold text-center">DÖVLƏT TƏRƏFİNDƏN VERİLƏN ELANLAR</h2>
                    <div id="responceAnnouncement" class="row  wow fadeInUp">
                        @Html.Action("Announcement", "Home")
                    </div>
                </div>
            </div>

        </div>
        </div>
</section>

