
@model Emsal.UI.Models.ProductCatalogViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="menu-container">
    <div class="content homepage" id="menu-1">
        <div class="container">
            <div class="right_below" id="center" style="padding-top:0px;">
                <div class="elanlar">
                    <div class="col-md-3" id="puserMenu" style="background: #fafafa; padding-bottom: 10px;border: 3px solid #f2f2f2; border-radius: 0 0 5px 5px; padding-top: 15px;">
                        @*@Html.Action("AdminUnit", "Home", new { pId = 0 })*@
                        <script>
                            $(document).ready(function () {
                                $.ajax({
                                    url: '/Home/AdminUnit?pId=0',
                                    type: 'GET',
                                    success: function (result) {
                                        $('#puserMenu').html(result);

                                        $('.select2').select2();
                                    },
                                    error: function () {

                                    }
                                });
                            });
                        </script>
                    </div>

                    <div class="col-md-9" style="background:#fff;">

                        <h2 style="color: #000; margin-top: 30px; text-align:center;" class="text-bold mt-50">POTENSİAL İSTEHSALÇILAR</h2>

                        <div class="clearfix"></div>
                        <table class="table table-bordered" style="margin:0;">
                            <thead>
                                <tr>
                                    <th class="col-sm-3 text-black"><div style="float:left;width:90%;">Soyad, ad (hüquqi şəxsin adı)</div><div style="cursor:pointer;float:right;" onclick="GetUserInfo(this,'name')" class="sortingpu"></div></th>
                                    @*<th class="col-sm-2"><div style="float:left;">Soyad </div><div style="cursor:pointer;float:right;" onclick="GetUserInfo(this,'surname')" class="sortingpu"></div></th>*@
                                    <th class="col-sm-3 text-black"><div style="float:left;">Ünvan</div><div style="cursor:pointer;float:right;" onclick="GetUserInfo(this,'address')" class="sortingpu"></div></th>
                                    <th class="col-sm-5 text-black"><div style="float:left;">İstehsal etdiyi məhsullar</div>@*<div style="cursor:pointer;float:right;" onclick="GetUserInfo(this, 'products')" class="sortingpu"></div>*@</th>
                                    <th class="col-sm-1 text-center text-black">Keçid</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="col-sm-3"><input onkeyup="UserInfoSearch(this, 'name')" class="form-control" placeholder="axtar" /></td>
                                    @*<td class="col-sm-2"><input onkeyup="UserInfoSearch(this, 'surname')" class="form-control" placeholder="axtar" /></td>*@
                                    <td class="col-sm-3"><input onkeyup="UserInfoSearch(this, 'address')" class="form-control" placeholder="axtar" /></td>
                                    <td class="col-sm-5"><input onkeyup="UserInfoSearch(this, 'products')" class="form-control" placeholder="axtar" /></td>
                                    <td class="col-sm-1"></td>
                                </tr>
                            </tbody>
                        </table>

                        @Html.Action("UserInfo", "Home")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
