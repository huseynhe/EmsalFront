@model Emsal.UI.Models.SpecialSummaryViewModel
@{
    ViewBag.Title = "Orders";
}
@using PagedList.Mvc;
@{
    if (Model.DemandProductionList.Count == 0)
    {
        <div class='white_fon'>
            <p>Heç nə tapılmadı</p>
        </div>

    }
    else
    {
        foreach (var item in Model.PagingDemand)
        {
            <div class="white_fon">
                <div class="row" style="color:red; font-size:15px">
                    <div class="col-md-8">
                        @item.ProductName - @item.ParentName
                    </div>
                    <div class="col-md-4">
                        Məhsulun miqdarı : @item.ProductQuantity  @item.QuantityType
                    </div>
                </div><br />
                <div class="row">
                    <div class="col-md-4">
                        @{
                            if (item.ProductProfilePicture != null)
                            {
                                <a href="/GovernmentOrganisationSpecialSummary/DemandProductInfo?Id=@item.ProductId"><img src=@item.ProductProfilePicture style='max-width:200px;max-height:230px'></a>
                            }
                            else
                            {
                                <a href="/GovernmentOrganisationSpecialSummary/DemandProductInfo?Id=@item.ProductId"><img src='http://emsal.az/staticFiles/notFound.png' style='max-width:200px;max-height:230px' /></a>
                            }
                        }
                    </div>
                    <div class="col-md-7">
                        @foreach (var itemmm in item.DemandCalendarList)
                        {
                            @*<div class="well">
                                <span>Tarix: @itemmm.day @itemmm.month @itemmm.year saat @itemmm.ocklock</span><br /><br />
                                <span>Miqdar: @itemmm.quantity @item.QuantityType</span><br /><br />
                                <span>Daşınma qrafiki: @itemmm.shipmetType</span>
                            </div>*@

                            <div>
                                <span>Tarix: @itemmm.day @itemmm.month @itemmm.year saat @itemmm.ocklock   <span class="glyphicon glyphicon-info-sign" data-toggle="modal" data-target="#@itemmm.id" style="color:#265A88"></span></span><br /><br />
                                <div id="@itemmm.id" class="modal fade" role="dialog">
                                    <div class="modal-dialog">

                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title">Məlumatlar</h4>
                                            </div>
                                            <div class="modal-body">
                                                <span>Miqdar: @itemmm.quantity @item.QuantityType</span><br /><br />
                                                <span>Daşınma qrafiki: @itemmm.shipmetType</span>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Bağla</button>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
        }
         <div class="box-footer clearfix">
            Səhifə @(Model.PagingDemand.PageCount < Model.PagingDemand.PageNumber ? 0 : Model.PagingDemand.PageNumber) (cəmi @Model.PagingDemand.PageCount)
            @Html.PagedListPager(Model.PagingDemand, page => Url.Action("OnAirDemands", "GovernmentOrganisationSpecialSummary", new { page }))
        </div>
    }
}
