@model Emsal.AdminUI.Models.Organisation
@{
    ViewBag.Title = "PageRoles";
    Layout = "~/Views/Shared/_AddGovernmentOrganisationLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3>İstifadəçi rolları</h3>
                    @*<h3 class="box-title col-md-12">EnumCategory <a class="btn btn-primary pull-right" href="@Url.Action("Create","EnumCategory")"><span class="glyphicon glyphicon-plus"></span> Əlavə et</a></h3>*@
                </div>
                <div class="box-body table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <th>
                                <label>Səhifə adı</label>
                            </th>
                            <th>
                                İcazə verilən rollar
                            </th>
                        </tr>
                        <tr>
                            <td>@Model.AuthenticatedPart.Name</td>

                            <td>
                                @{
                                    foreach (var item in Model.PageRoles)
                                    {
                                        <span class="badge bg-info" title="@item.Description">@item.Name&thinsp;</span><a href="/RoleManagement/DeletePageRole?pageId=@Model.AuthenticatedPart.ID&roleId=@item.Id" class="badge bg-red" title="Rolu sil">
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </a><br /><br />
                                    }
                                }
                            </td>
                            <td>
                                <a class="btn btn-primary pull-right" href="/RoleManagement/AddRoleToPage?pageId=@Model.AuthenticatedPart.ID"><span class="glyphicon glyphicon-plus"></span>Rol əlavə et</a>
                            </td>
                        </tr>


                    </table>
                </div>

            </div>
        </div>
    </div>
</section>
