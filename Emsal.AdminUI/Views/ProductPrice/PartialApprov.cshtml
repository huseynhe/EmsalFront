@model Emsal.AdminUI.Models.ProductPriceViewModel
@using PagedList.Mvc;
@using Emsal.Utility.CustomObjects;


@{
    ViewBag.Title = "Index";
    Layout = "";
}


<table class="table table-bordered">


    @foreach (var item in Model.Paging)
    {
        <tr>
            <td class="col-md-8">
                @Html.DisplayFor(modelItem => item.productName) (@Html.DisplayFor(modelItem => item.productParentName))
            </td>
            <td class="col-md-1">
                @Custom.ConverPriceToStringDelZero((decimal)item.unit_price)
            </td>
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.year)
            </td>
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.partOfYear)
            </td>
            <td class="col-md-1">
                <a href="/ProductPrice/Delete/?id=@item.priceID&year=@Model.year&rub=@Model.rub" class="badge bg-red">
                    <span class="glyphicon glyphicon-remove"></span>
                </a>
            </td>
        </tr>
    }
</table>
<div class="box-footer clearfix">
    Səhifə @(Model.Paging.PageCount < Model.Paging.PageNumber ? 0 : Model.Paging.PageNumber) (cəmi @Model.Paging.PageCount)
    @Html.PagedListPager(Model.Paging, page => Url.Action("Approv", new { page, year = Model.year, rub = Model.rub, pname=Model.pname }))
</div>
<div class="clearfix"></div>
<br />
