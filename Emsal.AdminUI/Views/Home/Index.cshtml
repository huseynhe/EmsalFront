@model Emsal.AdminUI.Models.ProductCatalogViewModel

@{
    ViewBag.Title = "Indexm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    span, i {
        cursor: pointer;
    }
</style>

<div class="col-md-6 form-horizontal content">
    <div class="box box-info" id="ProductCatalogTree">
        <div class="box-header with-border">
            <h3 class="box-title">Məhsullar</h3>
        </div>
        <div class="box-body">
            <div class="row"  >
                <div class="col-md-4"  style="width:63.33333333%;">
                    <ul id="tree3">
                        <li>
                            <span onclick="setParId(this, 0, '', '',0,'')"> Əsas məhsul</span>
                        </li>
                        @foreach (var item in Model.ProductCatalogList)
                            {
                                if (item.ProductCatalogParentID == 0)
                                {
                            <li>
                                <span onclick="setParId(this, @item.Id, '@item.ProductName', '@item.ProductDescription', @item.canBeOrder, '@item.productCode')"> @item.ProductName</span>
                                @foreach (var item2 in Model.ProductCatalogList)
                                        {
                                            if (item2.ProductCatalogParentID == item.Id)
                                            {
                                <ul>
                                    <li>
                                        <span onclick="setParId(this, @item2.Id, '@item2.ProductName', '@item2.ProductDescription',@item2.canBeOrder, '@item2.productCode')"> @item2.ProductName</span>
                                        @foreach (var item3 in Model.ProductCatalogList)
                                                        {
                                                            if (item3.ProductCatalogParentID == item2.Id)
                                                            {
                                        <ul>
                                            <li>
                                                <span onclick="setParId(this, @item3.Id, '@item3.ProductName', '@item3.ProductDescription', @item3.canBeOrder, '@item3.productCode')">@item3.ProductName</span>
                                                @foreach (var item4 in Model.ProductCatalogList)
                                                                        {
                                                                            if (item4.ProductCatalogParentID == item3.Id)
                                                                            {
                                                        <ul>
                                                            <li>
                                                                <span onclick="setParId(this, @item4.Id, '@item4.ProductName', '@item4.ProductDescription',@item4.canBeOrder, '@item4.productCode')">@item4.ProductName</span>
                                                                @foreach (var item5 in Model.ProductCatalogList)
                                                                                        {
                                                                                            if (item5.ProductCatalogParentID == item4.Id)
                                                                                            {
                                                                        <ul>
                                                                            <li>
                                                                                <span onclick="setParId(this, @item5.Id, '@item5.ProductName', '@item5.ProductDescription',@item5.canBeOrder, '@item5.productCode')">@item5.ProductName</span>
                                                                            </li>
                                                                        </ul>
                                                                                            }
                                                                                        }
                                                            </li>
                                                        </ul>
                                                                            }
                                                                        }
                                            </li>
                                        </ul>
                                                            }
                                                        }
                                    </li>
                                </ul>
                                            }
                                        }
                            </li>
                                }
                            }
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>


