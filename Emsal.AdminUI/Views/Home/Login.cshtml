            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal">
                <h6>&nbsp;</h6>
                <div class="box-body">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">İstifadəçi adı</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" placeholder="İstifadəçi adı">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-3 control-label">Şifrə</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" placeholder="Şifrə">
                        </div>
                    </div>
                    @*<div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Remember me
                                </label>
                            </div>
                        </div>
                    </div>*@
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <a href="/" class="btn btn-info pull-right">Təsdiqləyin</a>
                </div>
                <!-- /.box-footer -->
            </form>
        </div>
    </div>
</div>