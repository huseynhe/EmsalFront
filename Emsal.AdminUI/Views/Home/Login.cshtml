@{
    ViewBag.Title = "Login";
    Layout = "";
}

<link href="~/Content/css/AdminLTE.min.css" rel="stylesheet" />
<link href="~/Content/css/bootstrap.css" rel="stylesheet" />
<style>
    body {
        background: #ecf0f5;
    }
</style>
<h2>&nbsp;</h2>
<div class="content">
    <div class="col-md-4 col-md-offset-4">
        <div class="box box-info">
            <div class="box-header with-border">
