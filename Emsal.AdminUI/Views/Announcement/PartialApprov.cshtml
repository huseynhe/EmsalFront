@model Emsal.AdminUI.Models.AnnouncementViewModel
@using PagedList.Mvc;
@using Emsal.Utility.CustomObjects;

@{
    ViewBag.Title = "Index";
    Layout = "";
}

                    <table class="table table-bordered">


                        @foreach (var item in Model.Paging)
                        {
                            <tr>
                                @*<td>
                                        <input onchange="getCheckedList()" name="ids" value="@item.productionID" class="ch" type="checkbox">
                                    </td>*@
                                <td class="col-md-6">
                                    @item.announcement.product_name (@item.parentName)
                                </td>
                                <td class="col-md-1">
                                    @item.announcement.quantity @item.announcement.quantity_type_Name
                                </td>
                                <td class="col-md-1">
                                    @item.announcement.unit_price AZN
                                </td>
                                <td class="col-md-1">
                                    @item.announcement.description
                                    @if (DatetimeExtension.toShortDate(item.announcement.startDate).ToShortDateString() != "01.01.0001")
                                    {
                                        <span>@DatetimeExtension.toShortDate(item.announcement.startDate).ToShortDateString()</span>
                                    }
                                </td>
                                <td class="col-md-1">
                                    @item.announcement.description
                                    @if (DatetimeExtension.toShortDate(item.announcement.endDate).ToShortDateString() != "01.01.0001")
                                    {
                                        <span>@DatetimeExtension.toShortDate(item.announcement.endDate).ToShortDateString()</span>
                                    }
                                </td>
                                <td class="col-md-1">
                                    @item.announcement.description
                                </td>
                                <td  class="col-md-1 shsingle">
                                        <a href="/Announcement/Delete/@item.announcement.Id" class="badge bg-light-blue">
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </a>
                                    </td>
                            </tr>
                        }
                    </table>

                <div class="box-footer clearfix">
                    Səhifə @(Model.Paging.PageCount < Model.Paging.PageNumber ? 0 : Model.Paging.PageNumber) (cəmi @Model.Paging.PageCount)
                    @Html.PagedListPager(Model.Paging, page => Url.Action("Approv", new { page, pname=Model.pname }))
                </div>