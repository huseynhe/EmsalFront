@model Emsal.AdminUI.Models.OfferProductionViewModel
@{
    ViewBag.Title = "ProductCatalog";
    Layout = "";
}
<style>
    .select2 {
        width: 100% !important;
    }
</style>

<select onchange="StatisticsSearch(this,'OfferProduction', '@Model.actionName', 'productId')" class="form-control select2" style="width:auto !important;">
    <option value="0">Satılacaq məhsul üzrə axtar</option>
    @foreach (var item in Model.ProductCatalogDetailList)
    {
        <option value="@item.productCatalog.Id">@item.productName (@item.productCatalog.ProductName)</option>
    }
</select>



