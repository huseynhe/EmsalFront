@*@model IEnumerable<Emsal.AdminUI.Models.EnumCategoryViewModel>*@
@model Emsal.AdminUI.Models.Organisation
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "";
}

<script src="~/Content/js/Goverment.js"></script>

                <br />
                <h3>Fiziki Şəxslər</h3>
                <div class="box-body table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <th>
                                Soyadı, Adı, Ata adı
                            </th>
                            <th>
                                Region
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                        </tr>

                        @if (Model.userDetailArray != null)
                        {
                            foreach (var item in Model.userDetailArray)
                            {
                            <tr>
                                <td>
                                    @item.surName @item.name @item.fatherName
                                </td>
                                <td>
                                    @item.fullAddress
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    <a href="/GovernmentOrganisation/EditPerson/?userId=@item.Id" class="badge bg-light-blue">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                </td>
                                <td>
                                    <a href="/GovernmentOrganisation/DeleteIndividual/@item.Id" class="badge bg-red">
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </a>
                                </td>
                            </tr>
                            }
                        }
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    Səhifə @(Model.pageCount < Model.pageNumber ? 0 : Model.pageNumber) (cəmi @Model.pageCount)
                    @Html.PagedListPager(Model.PagingIndividual, page => Url.Action("Individuals", new { page, Model.SName, Model.SSurname, Model.SFName, Model.SEMail, Model.SFullAddress, Model.SUserName }))
                </div>

                @Html.HiddenFor(x => x.actionName);





