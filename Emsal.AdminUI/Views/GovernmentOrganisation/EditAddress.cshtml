@model Emsal.AdminUI.Models.Organisation
@{
    ViewBag.Title = "EditAddress";
    Layout = "~/Views/Shared/_AddGovernmentOrganisationLayout.cshtml";
}

<div class="col-md-6 col-md-offset-3" style="margin-top:100px;box-shadow:1px 1px 2px 3px #ddd; background-color:white">
    <br /><br /><br />

    <h3 style="text-align:center">Ünvan Məlumatlarına düzəliş et</h3>
    @using (Html.BeginForm("EditAddress", "GovernmentOrganisation", new { addressId = Model.FutureAddress.Id, userId = Model.User.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <br />
        <div class="form-group" id="AdminUnit">
            <script>
                $(document).ready(function () {
                    $.ajax({
                        url: '/GovernmentOrganisation/AdminUnit?pId=0',
                        type: 'GET',
                        success: function (result) {
                            $('#AdminUnit').html(result);

                            $("select[name='adId[0]']").change();
                        },
                        error: function () {

                        }
                    });
                });
            </script>
            @*@Html.Action("AdminUnit", "OfferProduction", new { pId = 0 })*@
        </div>
        <div class="col-md-6 col-md-offset-4" style="margin-bottom:20px; padding:5px">
            <input type="submit" class="btn btn-success" value="Düzeliş Et" id="sendInfo" />
        </div>
    }
</div>
