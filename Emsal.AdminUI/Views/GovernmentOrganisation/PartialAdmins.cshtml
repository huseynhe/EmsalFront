@model Emsal.AdminUI.Models.Organisation
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "";
}

<p>

</p>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <div class="row">
                        <div class="col-md-5">
                            <input class="form-control" placeholder="Soyadı, Adı, Ata adına görə axtar" id="pNameInput" /><br />
                        </div>

                        <div class="col-lg-2">
                            <button type="submit" class="btn btn-primary btn-sm" onclick="SearchForProduct()">Axtar</button>
                        </div>
                    </div>
                    <h3>Adminlər</h3>

                    <div class="col-xs-4">
                        <a class="btn btn-primary" href="/GovernmentOrganisation/AddAdmin"><span class="glyphicon glyphicon-plus"></span> Əlavə et</a>
                    </div>
                    @*<h3 class="box-title col-md-12">EnumCategory <a class="btn btn-primary pull-right" href="@Url.Action("Create","EnumCategory")"><span class="glyphicon glyphicon-plus"></span> Əlavə et</a></h3>*@
                </div>
                <div class="box-body table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                        </tr>

                        @foreach (var item in Model.PagingIndividual)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    <a href="/GovernmentOrganisation/AddAdmin/?id=@item.Id" class="badge bg-light-blue">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                </td>
                                <td>
                                    <a href="/GovernmentOrganisation/DeleteAdmin/@item.Id" class="badge bg-red">
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    Səhifə @(Model.PagingIndividual.PageCount < Model.PagingIndividual.PageNumber ? 0 : Model.PagingIndividual.PageNumber) (cəmi @Model.PagingIndividual.PageCount)
                    @Html.PagedListPager(Model.PagingIndividual, page => Url.Action("Admins", new { page }))
                </div>
                @Html.HiddenFor(x => x.actionName);
            </div>
        </div>
    </div>
</section>