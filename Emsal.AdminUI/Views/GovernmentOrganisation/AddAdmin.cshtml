@model Emsal.AdminUI.Models.Organisation
@{
    ViewBag.Title = "AddGovOrganisationInfo";
    Layout = "~/Views/Shared/_AddGovernmentOrganisationLayout.cshtml";
}

@using (Html.BeginForm())
{

    <div class="row">
        <div class="col-md-offset-5">

            <br />

            <div class="row">
                <div class="col-lg-4">
                    <span>İstifadəçi adı</span>
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <span>Elektron ünvan</span>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required", @type = "email" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <span>Şifrə</span>
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-lg-2">
                    <a class="btn btn-primary" href="/GovernmentOrganisation/Admins">Geri</a>
                </div>

                <div class="col-lg-2">
                    <input type="submit" class="btn btn-primary" value="Əlavə et" />
                </div>
            </div>

        </div>
    </div>

}