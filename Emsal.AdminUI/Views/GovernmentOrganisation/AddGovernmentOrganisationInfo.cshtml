@model Emsal.AdminUI.Models.Organisation
@{
    Layout = "~/Views/Shared/_AddGovernmentOrganisationLayout.cshtml";
}
<div class="container col-md-6 col-md-offset-3" style="border-radius: 5px; margin-top: 30px; margin-bottom:30px; box-shadow:1px 1px 2px 3px #ddd; background-color:white">
    <br />

    <h2 style="text-align:center">Qeydiyyatı Tamamla</h2>
    <br /><br />
    @using (Html.BeginForm("AddGovernmentOrganisationInfo", "GovernmentOrganisation", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Voen)
        @Html.HiddenFor(model => model.UserName)
        @Html.HiddenFor(model => model.AddressId)
        @Html.HiddenFor(model => model.Password)
        @Html.HiddenFor(model => model.Email)
        @Html.HiddenFor(model => model.FullAddress)




            <div class="form-group" style="padding:5px;">
                <label>Təşkilatın Adı</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })

            </div>
            <hr />
            <h3 class="modal-title">Təşkilatın Məsul Şəxsinin məlumatları</h3><br />
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group" style="padding:5px">
                        <label class="labelEdit">Adı</label>
                        @Html.TextBoxFor(x => x.ManagerName, new { @class = "form-control", id = "name" })
                        @Html.ValidationMessageFor(x => x.ManagerName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group" style="padding:5px">
                        <label class="labelEdit">Soyadı</label>
                        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", id = "surname" })
                        @Html.ValidationMessageFor(x => x.Surname, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group" style="padding:5px;">
                        <label class="labelEdit">Ata adı</label>
                        @Html.TextBoxFor(x => x.FatherName, new { @class = "form-control", id = "fatherName" })
                        @Html.ValidationMessageFor(x => x.FatherName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
                <div class="form-group" style="padding:5px; display:none;">
                    @Html.LabelFor(x => x.Voen)
                    @Html.TextBoxFor(x => x.Voen, new { @class = "form-control", id = "voen" })
                </div>

                <div class="form-group" style="padding:5px;">
                    <label class="labelEdit">Məsul Şəxsin Fini</label>
                    @Html.TextBoxFor(x => x.Pin, new { @class = "form-control", id = "pin" })
                    @Html.ValidationMessageFor(x => x.Pin, "", new { @class = "text-danger" })
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group" style="padding:5px">
                            <label class="labelEdit">Doğum Tarixi</label>
                            @Html.TextBoxFor(x=>x.Birthday, new {@class = "form-control datepicker"})
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group" style="padding:5px">
                            <label>Cinsi</label>
                            <select class="form-control" id="Gender" name="Gender">
                                <option>Cinsi Seçin</option>
                                <option>Kişi</option>
                                <option>Qadın</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group" style="padding:5px">
                            <label>Təhsili</label>
                            <select class="form-control" id="education" name="Education">
                                <option>Təhsil Seçin</option>
                                @{
                                if (Model != null)
                                {
                                    foreach (var item in Model.EducationList)
                                    {
                                            <option>@item.name</option>
                                        }
                                }

                            }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group" style="padding:5px">
                            <label>Vəzifəsi</label>
                            <select class="form-control" id="Job" name="Job">
                                <option>Vəzifə seçin</option>
                                @{
                                if (Model != null)
                                {
                                    foreach (var item in Model.JobList)
                                    {
                                            <option>@item.name</option>
                                        }
                                }

                            }
                            </select>
                        </div>
                    </div>
                </div>
               
                

                @*<a class="btn btn-default-focus" style="margin-left:5px; padding-left:3px; color:gray" data-toggle="modal" href="#managerAddressInfo" data-target="#managerAddressInfo">Menecerin Adres melumatlarını doldurun</a>*@

                <br />            <br />


                <div class="col-md-6 col-md-offset-4" style="margin-bottom:20px; padding:5px">
                    <input type="submit" class="btn btn-success" value="Qeydiyyatdan Keç" id="sendInfo" />
                </div>
                }

                <div class="clearfix" style="height: 20px;"></div>
            </div>


<br />
