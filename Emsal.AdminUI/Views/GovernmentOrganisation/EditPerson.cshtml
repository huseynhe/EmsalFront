@model Emsal.AdminUI.Models.Organisation
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AddGovernmentOrganisationLayout.cshtml";
}

<div class="col-md-6 col-md-offset-3" style="margin-top:100px;box-shadow:1px 1px 2px 3px #ddd; background-color:white">
    <br />

    <h2 style="text-align:center">Şəxsi Məlumatlara Düzəliş Et</h2>
    <br /><br />
    @using (Html.BeginForm("EditPerson", "GovernmentOrganisation", new { userId = Model.User.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Pin)
            @Html.TextBoxFor(model => model.Pin, new { @class = "form-control", id = "pin", autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.Pin, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Ad</label>
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id = "username" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Surname)
            @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", id = "password", autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.FatherName)
            @Html.TextBoxFor(model => model.FatherName, new { @class = "form-control", id = "fatherName", autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.FatherName, "", new { @class = "text-danger" })
        </div>
       
        <div class="form-group" style="padding:5px">
            <label>Cinsi</label>
            <select class="form-control" id="Gender" name="Gender">
                <option>Kişi</option>
                <option>Qadın</option>
            </select>
        </div>
        <div class="col-md-6 col-md-offset-4" style="margin-bottom:20px; padding:5px">
            <input type="submit" class="btn btn-success" value="Düzəliş Et" id="sendInfo" />
        </div>
    }
</div>
