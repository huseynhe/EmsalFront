                    });
                });
                        </script>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.descAddress, htmlAttributes: new { @class = "control-label" })
                            <input type="text" name="descAddress" id="descAddress" placeholder="məs: Azadlıq prospekti 22, mənzil 33" class="form-control">
                        </div>
                    </div>
                </div>

            </div>

            


            <h3>Məsul Şəxsin Məlumatları</h3><br />
            <div class="well">
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group" style="padding:5px;">
                            <label class="labelEdit required">Məsul Şəxsin Fini</label>
                            @Html.TextBoxFor(x => x.Pin, new { @class = "form-control", id = "pin" })
                            @Html.ValidationMessageFor(x => x.Pin, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-lg-3">
                        <label class="control-label" for="fin">&nbsp;</label>
                        <div class="clearfix"></div>
                        <input class="btn btn-primary" type="button" value="Yoxlayın" onclick="check()">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group" style="padding:5px">
                            <label class="labelEdit required">Adı</label>
                            @Html.TextBoxFor(x => x.ManagerName, new { @class = "form-control", id = "name" })
                            @Html.ValidationMessageFor(x => x.ManagerName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group" style="padding:5px">
                            <label class="labelEdit required">Soyadı</label>
                            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", id = "surname" })
                            @Html.ValidationMessageFor(x => x.Surname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group" style="padding:5px;">
                            <label class="labelEdit required">Ata adı</label>
                            @Html.TextBoxFor(x => x.FatherName, new { @class = "form-control", id = "fatherName" })
                            @Html.ValidationMessageFor(x => x.FatherName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" style="padding:5px; font-size:10px">
                            @Html.LabelFor(x => x.ManagerEmail, new { @class = "control-label required" })
                            @Html.TextBoxFor(x => x.ManagerEmail, new { @class = "form-control", type = "email" })
                            @Html.ValidationMessageFor(x => x.ManagerEmail, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row" style="font-size:11px">

                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(x => x.ManagerWorkPhone, new { @class = "control-label" })
                            <div class="row">
                                <div class="col-md-4">
                                    <select class="form-control" name="workPhonePrefix" id="workPhonePrefix">
                                        <option value="">Seçim edin</option>
                                        @foreach (var item in Model.WorkPhonePrefixList)
                                        {
                                            if (item.name == Model.WorkPhonePrefix)
                                            {
                                                <option selected value="@item.name">@item.description (@item.name)</option>
                                            }
                                            else
                                            {
                                                <option value="@item.name">@item.description (@item.name)</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ManagerWorkPhone, new { @class = "form-control numbersOnly" })
                                    @Html.ValidationMessageFor(x => x.ManagerWorkPhone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(x => x.ManagerMobilePhone, new { @class = "control-label required" })
                            <div class="row">
                                <div class="col-md-4">
                                    <select class="form-control" name="mobilePhonePrefix" id="mobilePhonePrefix">
                                        <option value="">Seçim edin</option>
                                        @foreach (var item in Model.MobilePhonePrefixList)
                                        {
                                            if (item.name == Model.mobilePhonePrefix)
                                            {
                                                <option selected value="@item.name">@item.description</option>
                                            }
                                            else
                                            {
                                                <option value="@item.name">@item.description</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ManagerMobilePhone, new { @class = "form-control numbersOnly" })
                                    @Html.ValidationMessageFor(x => x.ManagerMobilePhone, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row" style="font-size:11px">
                    <div class="col-md-3">
                        <div class="form-group" style="padding:5px">
                            <label class="labelEdit required">Doğum Tarixi</label>
                            @Html.TextBoxFor(x => x.Birthday, new { @class = "form-control datepicker", id = "birtday" })
                            @Html.ValidationMessageFor(x => x.Birthday, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group" style="padding:5px">
                            <label class="required">Cinsi</label>
                            <select class="form-control" id="Gender" name="Gender">
                                @{
                                    if (Model.Gender == "Kişi")
                                    {
                                        <option>Cinsi Seçin</option>
                                        <option selected="selected">Kişi</option>
                                        <option>Qadın</option>
                                    }
                                    else if (Model.Gender == "Qadın")
                                    {
                                        <option>Cinsi Seçin</option>
                                        <option>Kişi</option>
                                        <option selected="selected">Qadın</option>
                                    }
                                    else
                                    {
                                        <option>Cinsi Seçin</option>
                                        <option>Kişi</option>
                                        <option>Qadın</option>
                                    }
                                }

                            </select>
                            <span id="GenderAlert" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group" style="padding:5px">
                            <label>Təhsili</label>
                            <select class="form-control" id="education" name="Education">
                                <option>Təhsil Seçin</option>
                                @{
                                    if (Model != null)
                                    {
                                        foreach (var item in Model.EducationList)
                                        {
                                            if (item.Id == Model.ManagerEducation)
                                            {
                                                <option selected="selected">
                                                    @item.name
                                                </option>
                                            }
                                            else
                                            {
                                                <option>
                                                    @item.name
                                                </option>
                                            }
                                        }
                                    }

                                }
                            </select>
                        </div>
                    </div>
                    @*<div class="col-md-3">
                        <div class="form-group" style="padding:5px">
                            <label>Vəzifəsi</label>
                            <select class="form-control" id="Job" name="Job">
