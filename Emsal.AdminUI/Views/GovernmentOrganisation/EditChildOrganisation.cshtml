                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", required = "required", type = "email" })
                            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div><br /><br />
            <h3>Təşkilatın Yerləşdiyi Ünvan</h3><br />
            <div class="well">
                <div class="row">
                    <div class="form-group" id="AdminUnit">
                        <script>
                $(document).ready(function () {
                    $.ajax({
                        url: '/GovernmentOrganisation/AdminUnit?pId=0&adminUnitId=@Model.AdminUnitId',
                        type: 'GET',
                        success: function (result) {
                            $('#AdminUnitId').val(@Model.AdminUnitId);
