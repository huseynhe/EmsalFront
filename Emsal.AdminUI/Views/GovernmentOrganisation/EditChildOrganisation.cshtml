                                        }
                                    }

                                }
                            </select>
                        </div>
                    </div>*@

                </div>
            </div>

            <div class="col-md-2 col-md-offset-5" style="margin-bottom:20px; padding:5px">
                <a class="btn btn-primary" href="/GovernmentOrganisation/ChildOrganisations/?orgId=@Model.RedirectToParent">Geri</a>
            </div>
            <div class="col-md-2" style="margin-bottom:20px; padding:5px">
                <input type="submit" class="btn btn-success" value="Davam Et" id="sendChildOrganisationInfo" />
            </div>
                                    }
    </div>
</div>

<script>
        function GetAdminUnit(elem) {
            pId = $(elem).val();
            $('#AdminUnitId').val(pId);
            alert($('#AdminUnitId').val());
            $(elem).parent().nextAll().remove();
            if (pId > 0) {
                $.ajax({
                    url: '/GovernmentOrganisation/AdminUnit?pId=' + pId,
                    type: 'GET',
                    //data: { "pId": appId},
                    success: function (result) {
                        console.log(pId);

                        $('#addressId').val(pId);
                        $(elem).parent().parent().append(result);



                        $('.select2').select2();
                    },
                    error: function () {
                        console.log('error')
                    }
                });
            }
        }
</script>

<script>
    $("#sendChildOrganisationInfo").on("click", function (e) {
        if ($("#Gender").val() === "Cinsi Seçin") {
            $("#GenderAlert").html("Menecerin cinsi seçilməmişdir")
            e.preventDefault();
        }
    })


</script>

