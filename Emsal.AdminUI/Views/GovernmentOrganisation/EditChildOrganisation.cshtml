                    <div class="col-md-4">
                        <div class="form-group ">
                            @Html.LabelFor(x => x.UserName, htmlAttributes: new { @class = "control-label required" })
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", required = "required" })
