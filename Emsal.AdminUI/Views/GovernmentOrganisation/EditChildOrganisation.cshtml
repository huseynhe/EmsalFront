                <div class="row">
                    @*<div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(x => x.Voen, htmlAttributes: new { @class = "control-label required" })
                            @Html.TextBoxFor(x => x.Voen, new { @class = "form-control", required = "required" })
