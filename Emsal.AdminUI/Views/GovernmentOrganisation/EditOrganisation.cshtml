@model Emsal.AdminUI.Models.Organisation
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AddGovernmentOrganisationLayout.cshtml";
}

<div class="col-md-6 col-md-offset-3" style="margin-top:100px;box-shadow:1px 1px 2px 3px #ddd; background-color:white">
    <br /><br /><br />

    <h3 style="text-align:center">İstifadəçi məlumatlarına düzəliş et</h3><br />
    @using (Html.BeginForm("EditOrganisation", "GovernmentOrganisation", new { organisationId = Model.ForeignOrganisation == null ? 0: Model.ForeignOrganisation.Id, userId = Model.User == null ? 0: Model.User.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "labelEdit"})
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id = "username" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Voen)
            @Html.TextBoxFor(model => model.Voen, new { @class = "form-control", id = "password", autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.Voen, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-2 col-md-offset-4" style="margin-bottom:20px;">
            <a class="btn btn-primary" href="/GovernmentOrganisation/Index">İmtina Et</a>
        </div>
        <div class="col-md-6" style="margin-bottom:20px;">
            <input type="submit" class="btn btn-success" value="Davam Et" id="sendInfo" />
        </div>
    }
</div>

<style>
    .labelEdit{
        width:10em;

    }
</style>