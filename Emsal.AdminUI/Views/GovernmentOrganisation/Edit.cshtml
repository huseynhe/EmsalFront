@model Emsal.AdminUI.Models.Organisation
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AddGovernmentOrganisationLayout.cshtml";
}


<div class="col-md-6 col-md-offset-3" style="margin-top:100px;box-shadow:1px 1px 2px 3px #ddd; background-color:white">

    <br /><br /><br />

    <h3 style="text-align:center">İstifadəçi məlumatlarına düzəliş et</h3>

    @using (Html.BeginForm("Edit", "GovernmentOrganisation", new { Id = Model.User.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <br /><br /><br />
        <div class="form-group">
            <label>Ad</label>
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", id = "username" })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
            if (Model.User.ASC_ID != 0 && Model.User.ASC_ID != null)
            {
                <div class="form-group" id="asc" style="padding:5px;">
                    <label>ASC</label>
                    <select name="ASCId" class="form-control">
                        @{
                            if (Model.ASCBranchArray.Length != 0)
                            {
                                foreach (var item in Model.ASCBranchArray)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            }
                        }
                    </select>
                </div>
            }
                else if (Model.User.KTN_ID != 0 && Model.User.KTN_ID != null)
                {
                    <div class="form-group" id="ktn" style="padding:5px;">
                        <label>KTN</label>
                        <select name="KTNId" class="form-control">
                            @{
                                if (Model.KTNBranchArray.Length != 0)
                                {
                                    foreach (var item in Model.KTNBranchArray)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                }



                            <div class="form-group">
                                @Html.LabelFor(model => model.Password)
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", id = "password", autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email)
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "email" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-2 col-md-offset-4" style="margin-bottom:20px; padding:5px">
                                <a class="btn btn-primary" href="/GovernmentOrganisation/Index">İmtina Et</a>
                            </div>
                            <div class="col-md-6" style="margin-bottom:20px; padding:5px">
                                <input type="submit" class="btn btn-success" value="Davam Et" id="sendInfo" />
                            </div>
                            }
</div>

<script src="~/Content/js/pagedList.js"></script>
