@model Emsal.AdminUI.Models.DemandProductionViewModel
@{
    ViewBag.Title = "ProductCatalog";
    Layout = "";
    string mp = "";

    if (Model.actionName == "DemandByForganistion")
    {
        mp = "multiple";
    }
}
<style>
    .select2 {
        width: 100% !important;
    }
</style>


<select @mp onchange="StatisticsSearch(this,'DemandProduction', '@Model.actionName', 'addressId')" class="form-control select2" style="width:auto !important;">
    @if (mp != "")
    {
    <option value="0">Məhsulun ünvanı üzrə axtar</option>
    }
    @foreach (var item in Model.PRMAdminUnitList)
    {
        <option value="@item.Id">@item.Name</option>
    }
</select>



