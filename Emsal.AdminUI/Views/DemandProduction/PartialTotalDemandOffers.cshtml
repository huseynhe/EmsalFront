@model Emsal.AdminUI.Models.DemandProductionViewModel
@using PagedList.Mvc;
@using Emsal.Utility.CustomObjects;

@{
    ViewBag.Title = "Index";
    Layout = "";
    decimal tquantity = 0;
    string pname = "";
    string opname = "";
    long i = 0;
}
<h4 class="text-danger text-center">
    <a href="/DemandProduction/TotalDemandOffers?productId=@Model.productId&userType=@Model.userType&finVoen=@Model.finVoen&excell=true" class="btn btn-warning btn-sm active pull-right" style="margin-top: -5px;margin-right:5px;">
        <i class="fa fa-file-excel-o" aria-hidden="true"></i>
        Yüklə
    </a>
</h4>
<div class="clearfix"></div><br />
<div class="box-body no-padding">
    <div class="table-responsive">
        <div class="col-sm-1 col-sm-offset-11" style="position: absolute;">
            <span class="badge " style="margin-top: -10px; float: right; margin-right: 15px;background:#D43F3A;">@Model.itemCount</span>
        </div>
        <table class="table table-hover table-striped table-bordered">
            <tbody>
                @foreach (var item in Model.DemanProductionGroupList)
                {
                    pname = item.productName + item.productParentName;
                    if(opname!=pname)
                    {
                        i = 0;
                    }
                    <tr>
                        <td class="col-md-1">
                            @item.productName (@item.productParentName)
                        </td>
                        <td class="col-md-1">
                            @Custom.ConverPriceToStringDelZero((decimal)item.totalQuantity)
                        </td>
                        <td class="col-md-1">
                            @item.enumValueName
                        </td>
                        <td class="col-md-1">
                            @Custom.ConverPriceToStringDelZero((decimal)item.unitPrice)
                        </td>
                        <td class="col-md-1">
                            @Custom.ConverPriceToStringDelZero((decimal)item.totalQuantityPrice)
                        </td>
                        <td class="col-md-1">
                            @if (item.offerProductsList.Count() > 0)
                            {
                                <span>@item.offerProductsList[i].personName @item.offerProductsList[i].surname @item.offerProductsList[i].fatherName 
                            <div class="clearfix"></div>
                            @item.offerProductsList[i].organizationName</span>
                            }
                        </td>
                        <td class="col-md-1">
                            @if (item.offerProductsList.Count() > 0)
                            {
                                if (!string.IsNullOrWhiteSpace(item.offerProductsList[i].pinNumber))
                                {
                                   <b>FİN: </b>@item.offerProductsList[i].pinNumber
                                    <div class="clearfix"></div>
                                }
                                if (!string.IsNullOrWhiteSpace(item.offerProductsList[i].voen))
                                {
                                    <b>VÖEN: </b>@item.offerProductsList[i].voen
                                }
                            }
                        </td>
                    </tr>
                    opname = pname;
                    i = i + 1;
                }
            </tbody>
        </table>
    </div>
</div>
<div class="box-footer clearfix">
    Səhifə @(Model.PagingT.PageCount < Model.PagingT.PageNumber ? 0 : Model.PagingT.PageNumber) (cəmi @Model.PagingT.PageCount)
    @Html.PagedListPager(Model.PagingT, page => Url.Action("TotalDemandOffers", new { page, productId = Model.productId, userType = Model.userType, finVoen = Model.finVoen }))
</div>



<script>
    $(document).ready(function () {
        $('#chall').hide();
    });
</script>
