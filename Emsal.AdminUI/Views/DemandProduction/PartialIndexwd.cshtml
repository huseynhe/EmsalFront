@model Emsal.AdminUI.Models.DemandProductionViewModel
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "";
    decimal tquantity = 0;
}


               <h4 class="text-danger text-center"> cari səhifə üçün qiymət: @Model.currentPagePrice azn - bütün qiymət: @Model.allPagePrice azn</h4>

                    <div class="box-body no-padding">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped table-bordered">
                                <tbody>
                                    @foreach (var item in Model.Paging)
                                    {
                                        <tr>
                                            <td class="col-md-3">
                                                @item.productName (@item.productParentName)
                                            </td>
                                            <td class="col-md-1">
                                                @item.quantity @item.enumValueName
                                            </td>
                                            <td class="col-md-1">
                                                @item.pr azn
                                            </td>
                                            <td class="col-md-1">
                                                @if (item.productionCalendarList.FirstOrDefault().TypeDescription != null)
                                                {
                                                    <span>@item.productionCalendarList.FirstOrDefault().TypeDescription</span>
                                                }
                                            </td>
                                            <td class="col-md-1">
                                                @if (item.foreignOrganization != null)
                                                {
                                                    @item.foreignOrganization.name
                                                }
                                            </td>
                                            <td class="col-md-2">
                                                @item.fullAddress (@item.addressDesc)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="box-footer clearfix">
                        Səhifə @(Model.Paging.PageCount < Model.Paging.PageNumber ? 0 : Model.Paging.PageNumber) (cəmi @Model.Paging.PageCount)
                        @Html.PagedListPager(Model.Paging, page => Url.Action("Indexwd", new { page, statusEV = Model.statusEV, productName = Model.productName, fullAddress = Model.fullAddress, userInfo = Model.userInfo }))
                    </div>






<script>
    $(document).ready(function () {
        $('#chall').hide();
    });
</script>
