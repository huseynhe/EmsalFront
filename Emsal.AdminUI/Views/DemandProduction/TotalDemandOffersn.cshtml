@model Emsal.AdminUI.Models.DemandProductionViewModel
@*@using PagedList.Mvc;*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Məhsul üzrə tələb və təkliflər</h3>
                    <!-- /.box-tools -->
                </div>
                <div class="clearfix"></div>
                <br />

                <div class="form-group">

                    <div class="col-md-2">
                        <label>Məhsulun adı</label><br />
                        @Html.Action("ProductCatalogForSale", "DemandProduction", new { actionName = "TotalDemandOffersn" })
                    </div>

                    <div class="col-md-2">
                        <label>İstifadəçinin növü</label><br />
                        <select onchange="StatisticsSearch(this, 'DemandProduction', 'TotalDemandOffersn', 'userType')" class="form-control select2" style="width:auto !important;">
                            <option value="0">Seçim edin</option>

                            <option value="15">Potensial istehsalçı</option>
                            <option value="11">Satıcı (İdxalçı)</option>

                        </select>
                    </div>

                    <div class="col-md-2">
                        <label>FİN</label><br />
                        <input onkeyup="StatisticsSearch(this, 'DemandProduction', 'TotalDemandOffersn', 'fin')" class="form-control" placeholder="axtar" />
                    </div>

                    <div class="col-md-2">
                        <label>VÖEN</label><br />
                        <input onkeyup="StatisticsSearch(this, 'DemandProduction', 'TotalDemandOffersn', 'voen')" class="form-control" placeholder="axtar" />
                    </div>

                </div>


                <div class="clearfix"></div>

                <br />
                <table class="table table-hover table-striped table-bordered" style="margin-bottom:0;">
                    <tbody>
                        <tr>
                            <th rowspan="2" class="col-md-1">
                                Məhsulun adı
                            </th>
                            <th rowspan="2" class="col-md-1">
                                Tələbat (Cəmi)
                            </th>
                            <th rowspan="2" class="col-md-1">
                                Tələbat (AZN)-vahid
                            </th>
                            <th rowspan="2" class="col-md-1">
                                Tələbat (AZN) cəmi
                            </th>

                            <th colspan="3" class="col-md-1 text-center">
                                Təkliflər
                            </th>
                        </tr>
                        <tr>
                            <th class="col-md-1">
                                Potensial istehsalçı
                            </th>
                            <th class="col-md-1">
                                İdaxlçı
                            </th>
                            <th class="col-md-1">
                                Cəmi
                            </th>
                        </tr>
                    </tbody>
                </table>
                <div id="AjaxPaginationList">
                    @Html.Partial("PartialTotalDemandOffersn")
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/js/pagedList.js"></script>


