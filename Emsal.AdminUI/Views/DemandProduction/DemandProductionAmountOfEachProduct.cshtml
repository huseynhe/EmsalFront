@model Emsal.AdminUI.Models.DemandProductionViewModel
@*@using PagedList.Mvc;*@


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Ərzaq məhsullarının illik tələbat və qiymətlər üzrə məlumat</h3>
                    <!-- /.box-tools -->
                </div>
                <table class="table table-hover table-striped table-bordered" style="margin-bottom:0;">
                    <tbody>
                        <tr>
                            <th class="col-md-3">
                                Ərzaq məhsullarının adı və növü<br />
                                <input onkeyup="DemandOfferProductionTotal('DemandProductionAmountOfEachProduct', this, 'productName')" class="form-control" placeholder="axtar" />
                            </th>
                            <th class="col-md-1">
                                Ölçü vahidi
                            </th>
                            <th class="col-md-1">
                                Tələbatın həcmi (miqdar)
                            </th>
                            <th class="col-md-1">
                                Qiymət (AZN)
                            </th>
                        </tr>
                    </tbody>
                </table>
                <div id="AjaxPaginationList">
                    @Html.Partial("PartialDemandProductionAmountOfEachProduct")
                </div>

            </div>
        </div>
    </div>
</div>

<script src="~/Content/js/pagedList.js"></script>




